#popup-gather.popup_window
    .title 转采
    .name
        img(src='images/examples/icon_websit.png')
        span 爱窝网
    .url www.iwoor.com
    .select 导航类网站
    .detail
        p.
            这是一个中国最热的设计社交类网站，很
            在这里集合了中国大部分设计师...
        ul.tags
            each item in ['平面设计','广告设计','电商','彩票','直播']
                li: a(href='search_website.html',target='_blank')= item
        .input
            span.label 标签
            input(type='text',placeholder='输入标签内容')
            span.btn-add 添加

    .btn-confirm-gather 采下来

    .panel-search
        .main
            ul
                each item in ['平面设计','广告设计','电商','彩票','直播','平面设计','广告设计','电商','彩票','直播']
                    li
                        .letter
                        .text= item

        input.search-input(placeholder='快速筛选/创建小窝')

