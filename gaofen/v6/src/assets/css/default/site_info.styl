// 简介：定义高分网各种信息页面样式
// 维护人：张盛志
// ==================================================

// 配置
@import "../shared/_settings"

// Nib
@import "nib"

// 混入声明
@import "../partials/_mixins"

// 占位符
@import "../partials/_placeholders"


// 布局
.page-content
  margin-top 30px

// 内容
h2
  margin 0 0 20px
  padding 10px 0
  font-size 24px
  text-align center
  split()

.desc
  h3
    font-size 14px
    margin 20px 0

  h4
    font-size 14px
    margin 20px 0 5px

  p
  li
    font-size 14px
    line-height 2

  p
    text-indent 2em
    margin 20px 0

  ul
  ol
    list-style none
    margin-left 0

  ul ol,
  ol ul
    margin-left 2em

.head-pic
  margin 0 0 20px 20px
  overflow hidden

.leadin
  p
    margin 0
    padding 0 20px 20px
    line-height 26px

.sec
  padding 0 20px 20px

  h3
    margin 0 0 5px

  p
    text-indent 0
    margin 0
    padding 0

  a
    highlight-link()

// 高分介绍
.channels
  padding 20px

  p
    font-size 14px
    margin 20px 0
    text-indent 0

  strong
    margin-right 30px

// 机构服务
.hd
  margin-bottom 10px
  padding 5px 20px
  font-size 14px
  font-weight bold
  background #F5F7F9

.thumb-info-list
  .item
    margin-top -15px
    padding 25px 5px 40px 20px

    .details
      p
        img
          margin 5px 0
          vertical-align middle

      .cont
        text-indent 2em

.more-contact
  margin 0 20px

  p
    margin 0
    text-indent 0

  a
    margin-left 5px

  img
    vertical-align middle

// 招贤纳士
.employment
  dt
    margin-top 50px
    padding 5px 20px
    font-size 14px
    font-weight bold
    background #F5F7F9

  dd
    margin 0 20px

    h3
      margin 20px 0

    h4
      margin 0 0 10px
      font-size 14px
      font-weight normal

    ul
      margin-bottom 30px

// 联系我们
.contact-info
  h3
    margin-bottom 20px

// 网站地图
.sitemap
  position relative
  overflow hidden
  if support-for-ie
    *zoom 1

  ul
    remove-list-style()

  li
    clearfix()
    split(top)
    padding 15px 0 25px 20px
    margin-top -10px
    line-height 26px
    font-size 14px

    a
      color #0F0F0F

    .top-level
      float left
      width 68px

      a
        color #0C67AA
        font-weight bold

    .sub
      margin-left 70px
      clearfix()
      if support-for-ie
        _margin-left 67px

      a
        float left
        white-space nowrap
        margin-right 15px
        if support-for-ie
          _display inline

      .hl
        color #0C67AA
        font-weight bold

  .sp
    .sub
      margin-left 80px
      if support-for-ie
        _margin-left 77px

// 友情链接
.links
  padding 20px

  .list
    a
      font-size 14px
      margin-right 15px
      line-height 24px
      color #454545

// 协议
.protocol
  margin 0 20px

  .actions
    margin 50px 0
    text-align center

// 法律声明
.legal-notice
  text-align center









































