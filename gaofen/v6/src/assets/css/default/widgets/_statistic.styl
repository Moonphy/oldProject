// 侧栏挂件：数据统计
// ==================================================

$statistic-typography
  margin-left 5px

  p
    margin 12px 0

.widget-statistic
  font-size 14px

  // 统计状态
  .status
    @extend $statistic-typography

  // 合作案例
  .cooperation
    @extend $statistic-typography
    margin-top 15px
    border-top 1px solid #D9D9D9

    // 更多案例
    .more
      padding-top 5px

      a
        font-size 12px
        highlight-link()

.widget-statistic-s2
  border 1px solid #DFDFDF
  padding 10px 15px

  .hd
    color gray-darker
    font-weight bold
    font-size 14px

.statistic-info
  overflow hidden
  position relative

  ul
    remove-list-style()
    margin-top -1px

  li
    split top
    padding 6px 0
    color #808080

    span
      inline-block()

    .num
      width 72px
      color orange
      text-align center
      font-size 20px