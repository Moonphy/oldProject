      background-position 0 offset-y

// 侧栏挂件
// ------------------------------
.widget
  width 100%
  overflow hidden

// 在线客服
.widget-feedback
  margin-bottom 20px
  padding 10px 10px 0
  border 3px solid #DFDFDF
