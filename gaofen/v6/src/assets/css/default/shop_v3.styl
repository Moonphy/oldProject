    margin 0 5px

.shop-page
  .customers
    float none
    width auto
    margin-bottom 25px

    .hd
      margin-top 0

// 资料专题
.widget-data-topic
  margin-bottom 15px

  .cont
    padding 0 10px

  .ad
  .picture
    margin-bottom 10px

