// ------------------------------
.order-page
  .page-content
    background #FFF
    width 918px
    padding 30px
    border 1px solid #DEDEDE

.orders
  font-size 14px
  margin-bottom 50px

  span
    float left

  input
    width 30px
    text-align center
    vertical-align middle

