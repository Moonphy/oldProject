// 简介：定义高分网搜索页面样式
// 维护人：张盛志
// ==================================================

// 配置
@import "../shared/_settings"

// Nib
@import "nib"

// 混入声明
@import "../partials/_mixins"

// 占位符
@import "../partials/_placeholders"


// 布局
// ------------------------------
.page-content
  margin-top 30px

// 搜索结果
// ------------------------------

// 搜索成功
.search-result
  .stat-post
    margin-bottom 30px

    li
      padding 10px 120px 10px 0
      split()

      a
        padding-left 20px
        background url("../img/dot.png") no-repeat 10px 7px

      .time
        top 10px

// 搜索失败
.advise
  margin 5px
  font-size 14px

  h3
    margin 20px 0
    font-size 14px

  ul
    remove-list-style()

  li
    line-height 2

  a
    margin-right 20px
    highlight-link()






























