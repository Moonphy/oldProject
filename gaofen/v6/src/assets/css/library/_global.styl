// 定制
// 说明：在重置的基础上补充定义网站基本字体及链接等样式
// ==================================================

// 页面主体
// ------------------------------
html
body
  overflow-x hidden
body
  margin 0
  font-family font-stack
  font-size font-size
  color font-color
  line-height line-height
  background-color white

// 超链接
// ------------------------------
a
  color link-color
  text-decoration none

  &:hover
    color link-color-hover
    text-decoration underline

// 斜体
// ------------------------------
i
  font-style normal

// 列表
// ------------------------------
ul
ol
  padding 0
  margin 0 0 10px 20px

ul ul
ul ol
ol ol
ol ul
  margin-bottom 0

li
  line-height 1.5

// 表单元素
// ------------------------------

// 去除input和textarea元素的聚焦样式
input:focus
textarea:focus
  outline none

// 输入框placeholder
/* WebKit browsers */
::-webkit-input-placeholder
  color gray

/* Mozilla Firefox 4 to 18 */
:-moz-placeholder
  color gray
  opacity 1

/* Mozilla Firefox 19+ */
::-moz-placeholder
  color gray
  opacity 1

/* Internet Explorer 10+ */
input:-ms-input-placeholder
  color gray

// 公共占位符
@import "../partials/_placeholders"

// 占位符
@import "_placeholders"

// 默认图片背景
.no-pic
  background #F8F8F8 url("../img/no_pic.png") no-repeat center

// 全站公用拼图
// ------------------------------

// 第三方账号登录按钮
@import '../partials/sprites/_btn_sns'

// 表单验证提示图标
@import '../partials/sprites/_form_help_inline'

// 各种提示图标
@import '../partials/sprites/_icon_alert'

























