// 学校区块列表
// ==================================================

.school-grid
  clearfix()
  min-height 220px
  padding-top 10px

  .loading-mini
    margin-top 100px

  .school-grid-item
    float left
    size 325px 103px
    margin 10px 10px 0 0
    overflow hidden
    clearfix()
    if support-for-ie
      _display inline

    .add
    .added
      display block
      text-align center
      line-height 24px
      font-weight bold
      font-size 14px
      cursor pointer
      color #FFAF40

    .added
      display none
      cursor default
      color #B3B3B3

    .thumb
      position relative
      float left
      size 120px 90px

      a
        .operations
          display none

        &:hover
          .operations
            display block

      img
        size 120px 90px
        display block

      .operations
        absolute left bottom
        size 100% 24px
        z-index 1

        .bg
          absolute left top
          background #000
          size 100%
          opacity .6
          z-index -1

    .info
      margin-left 130px

      h3
        margin 0 0 4px
        height 26px
        line-height 26px
        overflow hidden
        font-size 16px

      p
        line-height 24px
        margin 0
        font-size 14px
        color gray

  .comparison-added
    .added
      display block

    .add
      display none
