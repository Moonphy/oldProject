// 挂件：学校推荐
// ==================================================
.school-list
  position relative
  overflow hidden

  ul
    margin-top -1px

  li
    background-position left top
    position relative
    padding 10px 38px 9px 0
    line-height 20px

    .name
      display block
      height 20px
      overflow hidden

    .meta
      margin-top 2px
      font-size 12px
      color gray

    .operations
      absolute right bottom 9px
      font-size 12px

      a
        highlight-link()

      span
        color gray

  .rec
    padding 16px 0 15px
    clearfix()

    .picture
      float left
      size 100px 75px

      img
        size 100px 75px

    .info
      margin-left 110px
      if support-for-ie
        _margin-left 107px

      .name
        height 48px
        line-height 24px

    .operations
      bottom 20px