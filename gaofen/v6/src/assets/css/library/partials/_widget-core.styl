// 侧栏挂件
// ------------------------------
.widget
  margin-bottom 25px

  .widget-hd
    padding 10px 0 3px
    border-bottom 2px solid common-border-color

    .more
      float right
      margin-top 4px

      a
        highlight-link()

    .title
      font-weight bold
      font-size 16px
      color #4D4D4D

  // 为空提示
  .tips-null
    line-height 20px
    color #808080
    margin 10px 0

// 带线框挂件
.widget-box
  border 1px solid common-border-color

  .widget-box-hd
    position relative
    padding 10px 14px 3px
    border-bottom 1px solid common-border-color
    if support-for-ie
      _zoom 1

    .more
      float right
      margin-top 4px

      a
        highlight-link()

    .title
      font-weight bold
      font-size 16px
      color #4D4D4D

      span
        font-size 12px
        font-weight normal
        color #808080

  .widget-box-bd
    padding 0 14px

  .tags
    clearfix()
    padding 5px 0

    a
      float left
      line-height 20px
      padding 0 5px
      margin 0 15px 4px 0
      white-space nowrap
      border-radius 2px
      if support-for-ie
        _display inline

      &:hover
        color link-color-hover
        text-decoration none

      &.active
        background blue
        color #FFF

// 带tab挂件
.widget-tabs
  absolute right 10px bottom

  span
    display inline-block
    padding 0 10px
    height 22px
    line-height 22px
    font-weight normal
    cursor pointer

  .active
    background blue
    color #FFF
    font-weight bold
    border-radius 3px 3px 0 0