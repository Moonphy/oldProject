// 导航栏
// ==================================================

.nav-bar
  background-color #3397E4
  height 45px
  _overflow hidden

  .nav
    remove-list-style()
    margin-right 20px
    if support-for-ie
      _display inline
      *zoom 1

    li
      float left
      line-height 45px
      font-size 16px

      a
        float left
        padding 0 18px 3px 50px
        color #C1E5FF
        @extend $icon-nav

        &:hover
          padding-bottom 3px
          color #C1E5FF
          border-radius 0 0 3px 3px
          text-decoration none

      &.active
        a
        a:hover
          background-color orange
          color #FFF
          border-radius 0 0 3px 3px

// 导航栏
nav-links = index, search, guide, aspiration, ranking

for item, i in nav-links

  offset-y = -180px * i
  .nav-{item}
    a
      background-position 18px offset-y + 11px

      &:hover
        background-position 18px offset-y - 49px

  .{item}-page
    .nav
      .nav-{item}
        a
          padding-bottom 3px
          background-color #0074CC
          background-position 18px offset-y - 109px
          border-radius 0 0 3px 3px
          color #FFF

          &:hover
            color #FFF