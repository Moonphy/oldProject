// 详情页选项卡
// ==================================================

.tabs
  height 35px

  ul
    remove-list-style()
    clearfix()
    background #F2F2F2

  li
    float left
    width 133px
    font-size 14px
    text-align center

    a
      display block
      padding 7px 0
      margin-left -1px
      background url("img/tab_split.png") no-repeat left center

      &:hover
        text-decoration none

  .active
    position relative
    width 136px
    margin-top -3px
    margin-bottom -1px
    border 1px solid common-border-color
    border-bottom none
    background #FFF
    font-weight bold
    border-radius 3px 3px 0 0
    overflow hidden

    a
      border-top 3px solid #0074CC
      border-radius 2px 2px 0 0

// Fixed tabs
.tabs-fixed
  fixed left top
  width 100%
  background #F2F2F2
  border-bottom 1px solid common-border-color
  z-index 10000
  if support-for-ie
    _position absolute
    _top unquote("expression(documentElement.scrollTop)")

  .tabs
    .active
      margin-top -1px
      border-radius 0

      a
        border-radius 0
        padding 6px 0
