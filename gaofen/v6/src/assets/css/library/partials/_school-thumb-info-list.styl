// 挂件：学校图文列表
// ==================================================

.school-thumb-info-list
  ul
    remove-list-style()
    margin-top -21px

  li
    position relative
    clearfix()
    padding 25px 0 24px
    background url("img/split_h.png") repeat-x left bottom

  .thumb
    float right
    size 140px 105px

    img
      display block
      size 140px 105px

  .info
    margin-right 240px

    h3
      font-size 18px
      height 24px
      overflow hidden
      margin 0

      a:hover
        text-decoration none

    p
      color gray

    .meta
      margin 15px 0
      font-size 16px

  .times
    absolute right 165px top 30px
    color gray

  .operations
    absolute right 165px top 105px

    a
      font-weight bold
      highlight-link()

    span
      color gray