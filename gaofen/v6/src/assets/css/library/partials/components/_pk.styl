// 元件：返回顶部
// ==================================================

@keyframes zoom-in-out
  0%
    transform scale(1)
  40%, 60%
    transform scale(1.5)
  100%
    opacity 1
    transform scale(1)

.pk-dot
  absolute left top
  size 8px
  @extend $icon-pk
  background-position -21px -150px

html
  _background url("about:blank")

.pk
  fixed left 50% top 50%
  margin -60px 0 0 510px
  size 50px
  @extend $icon-pk
  z-index 1000
  if support-for-ie
    *zoom 1
    _position absolute
    _top unquote("expression(documentElement.scrollTop + documentElement.clientHeight/2)")

  &:hover
    background-position 0 -60px

  .num
    absolute right top -5px
    size 20px 21px
    @extend $icon-pk
    background-position -15px -120px
    color #FFF
    text-align center

.gt-ie9
  .pk
    .num
      background url("img/bubble.png") no-repeat left top
      background-size 20px 21px
  .ani
    .num
      animation zoom-in-out .4s ease-out forwards
