// 元件：下拉
// ==================================================

.ui-dropdown
  absolute left top
  background #FFF
  width 100%
  z-index 100
  text-align left

  .ui-dropdown-in
    padding 10px 10px 15px 15px
    border 1px solid common-border-color
    border-radius 6px

  .arrow
    absolute left 45px top -10px

  .arrow-border
    absolute left top
    caret #DDD 5px up

  .arrow-body
    absolute left top 1px
    caret #FFF 5px up

  .tips-null
    padding 4px 0
    font-size 12px
    color gray

  .query-result
    height 104px
    overflow hidden

  .scrollable
    padding-right 10px

  ul
    remove-list-style()
    overflow-x hidden
    overflow-y auto

  li
    padding 3px 0
    font-size 14px
    cursor pointer

    .hl
      color orange

    &:hover
      color link-color-hover

      .hl
        color link-color-hover