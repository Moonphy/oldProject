// 元件：下拉选择框
// ==================================================

.ui-select
  position relative
  inline-block()
  width 210px
  background #FFF

  .ui-select-trigger
    position relative
    border-radius 20px
    border 1px solid common-border-color
    margin 1px
    height 26px
    line-height 26px
    padding 0 25px 0 15px
    font-size 14px
    color #808080
    cursor pointer
    _padding-right 10px

    span
      absolute left top right 25px
      z-index 0
      text-indent 15px
      height 26px
      overflow hidden
      _width 100%

    input
      absolute left top
      display block
      width 100%
      opacity 0
      z-index -1

    select
      absolute left top -6px
      size 100% 30px
      font-size 14px
      opacity 0
      z-index 10
      font-family yahei

    .triangle
      absolute right 10px top 12px
      caret blue 4px down

  .ui-dropdown
    top 38px
    z-index 100

    .query-result
      height 192px

    li
      font-size 12px

.ui-select-selected
  .ui-select-trigger
    color gray-darker

.ui-select-active
  .ui-select-trigger
    border 2px solid blue
    margin 0