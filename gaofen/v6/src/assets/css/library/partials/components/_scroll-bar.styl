// 元件：滚动条
// ==================================================

.scroll-bar
  display none
  absolute right top
  size 4px 100%

  .scroll-track
    absolute left top
    size 100%
    background #D8D8D8
    border-radius 2px

  .scroll-thumb
    absolute left top
    width 4px
    min-height
    background gray
    border-radius 2px

.scrollable
  position relative

  .scroll-bar
    display block

  ul
    absolute left top
    width 100%