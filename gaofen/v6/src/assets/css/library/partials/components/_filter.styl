// 元件：过滤器
// ==================================================

.filter-head
  margin-bottom 15px
  padding-bottom 10px
  border-bottom 2px solid #DFDFDF

.filter
  overflow hidden
  padding 5px 0
  font-size 14px
  clearfix()
  if support-for-ie
    *zoom 1

  .label
    float left
    color gray
    width 73px
    padding 2px 5px 2px 0
    if support-for-ie
      _display inline

    .gap
      inline-block()
      width 12px

  .filter-cont
    margin-left 78px
    clearfix()
    if support-for-ie
      *padding-bottom 5px

    a
    span
      float left
      padding 0 5px
      margin 0 10px 6px 0
      white-space nowrap

    a
      color gray-darker

    a:hover
      color link-color-hover
      text-decoration none

    .active
      background blue
      color #FFF
      border-radius 2px