// 元件：表格
// ==================================================

.table
  table
    table-layout fixed
    width 100%
    border-collapse collapse
    border 1px solid #DDD
    border-width 1px 0 0 1px

  th
  td
    border 1px solid #DDD
    border-width 0 1px 1px 0
    text-align center

  th
    background #546679
    color #FFF
    font-weight normal

  .bubble
    display none
    absolute left 50% top 20px
    margin-left -131px
    size 240px 40px
    padding 5px 10px
    background #FFFBEC
    border 1px solid #F7E9BA
    font-weight normal !important
    color #4F4F4F
    font-size 12px
    line-height 20px
    text-align left
    z-index 1000

    .arrow
      absolute left 50% top -9px
      margin-left -4px
      .arrow-border
        absolute left top
        caret #F7E9BA 4px up
      .arrow-body
        absolute left top 1px
        caret #FFFBEC 4px up

  .hints
    position relative
    inline-block()
    size 16px
    background #F00
    vertical-align -3px
    margin-left 3px
    background url("img/hints.png") no-repeat

    &:hover
      background-position 0 -30px

      .bubble
        display inline

  td
    padding 10px 5px
    background #FFF

    a
      color link-color

    em
      font-style normal
      font-weight bold
      font-size 14px

  .gap
    padding 2px 3px

  .align-left
    text-align left

  .even
    td
      background #F3F3F3

  .highlight
    font-weight bold
    color #FFA201
    background #FFFDE5 !important

  .more
    text-align center
    border 1px solid #DDD
    border-top none
    padding 6px

    a
      position relative
      margin 0
      padding 0 10px 0 0
      highlight-link()

      .triangle
        absolute right top 8px
        caret blue 3px down
