// 定制样式
// --------------------------------------------------

.page-content
  margin-top 25px
  min-height 450px
  overflow-x hidden

.details-page
  .page-content
    margin-top 5px

// 对联广告
.picture-couplet-s2
  left 50%
  top 179px

.picture-couplet-left
  margin-left -612px

.picture-couplet-right
  right auto
  margin-left 510px

// 顶部广告
.picture-top
  margin-top 10px

.search-page .picture-top
  margin-bottom -10px

// 表单
.page-content
  .form
    .input-text
      border-radius 20px
      border 1px solid common-border-color
      margin 1px
      font-size 14px
      padding 3px 10px 4px 15px
      width 180px
      line-height 18px
      height 18px

    .input-focus
      border 2px solid blue
      margin 0

    .input-null
      color gray

    .form-row
      .control-label
        color gray-dark
        height 30px

    .error
      .ui-select
        .ui-select-trigger
          border 2px solid #F33621
          margin 0

      .input-text
        border 2px solid #F33621
        margin 0
        box-shadow none
        background #FFF

// 过滤器
.filter-group
  position relative
  border 1px solid common-border-color
  padding 0 20px 20px
  margin-bottom 30px
  if support-for-ie
    *zoom 1

  .filter
    padding 15px 0 10px
    background url("img/split_h.png") repeat-x left bottom

    .filter-cont
      position relative
      padding-right 60px
      position relative

    .filter-options
      clearfix()

    .filter-operations
      absolute right 10px top

      a
        position relative
        margin 0
        padding 0 10px 0 0
        highlight-link()

        .triangle
          absolute right top 10px

      .unfold
        display none

        .triangle
          caret blue 3px down

      .fold
        .triangle
          top 7px
          caret blue 3px up

    // 默认显示单行
    .single-line
      height 27px
      *height 25px
      overflow hidden

      .unfold
        display inline

      .fold
        display none


