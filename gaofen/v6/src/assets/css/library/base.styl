// 学校对比页
// ------------------------------

.comparison-table
  table
    table-layout fixed
    width 100%
    border-collapse collapse
    border 1px solid #DDD
    border-width 1px 0 0 1px

  th
  td
    border 1px solid #DDD
    text-align center
    font-size 14px
    padding 15px

  th
    border-width 0 1px 1px 0
    background #f5f5f5
    color gray

  td
    border-width 0 1px 1px 0
    border-bottom 1px dotted common-border-color

    li
      text-align left

    dl
      text-align left
      margin 0

    dt
      font-size 14px
      font-weight bold
      margin-top 10px

    dd
      margin 0

  .line
    td
      background #D9D9D9
      padding 0

  .first-row
    th
      border-top 3px solid #E9E9E9
    td
      border-top 3px solid #F2F2F2

  .last-row
    td
      border-bottom 1px solid #DDD

  .gap
    padding 2px 10px

  .align-left
    text-align left

  .tb-header
    td
      background-image none
      border-width 0 1px 0 0

    .first-cell
      font-size 16px
      font-weight bold
      color gray

    .name-wrap
      height 48px
      padding-top 10px
      position relative

      .close
        @extend $close
        right -5px
        top -5px

      .name
        display inline-block
        font-size 14px
        font-weight bold
        line-height 24px
        vertical-align middle

        a
          &:hover
            text-decoration none

      .placeholder
        display inline-block
        height 100%
        width 0
        vertical-align middle

    .switcher
      position relative
      margin-top 4px

      .trigger
        display block
        height 18px
        border 1px solid common-border-color
        padding 2px 15px
        margin 5px 20px 0
        border-radius 20px
        font-size 12px
        color gray

        &:hover
          color link-color-hover
          text-decoration none

      .query
        position relative
        border-bottom 1px solid common-border-color
        width 200px
        padding-left 20px
        margin-bottom 10px
        background url("img/icon_operations.png") no-repeat 0 3px
        overflow hidden

        input
          width 180px
          padding 2px 0
          border none
          font-size 12px
          background transparent
          color #4A4A4A

        .close
          @extend $close
          display none
          right 0
          top 4px

      .blur
        input
          color #A9A9A9

      .query-inserting
        .close
          display inline

      .ui-dropdown
        width 250px
        top 50px

        .query-result
          height 90px

        li
          font-size 12px

        .arrow
          left 85px

    .last-cell
      .switcher
        .ui-dropdown
          left auto
          right 0

          .arrow
            left auto
            right 85px

// 固定对比学校头部
.comparison-fixed
  fixed left top
  width 100%
  background #F2F2F2
  border-bottom 3px solid #E9E9E9
  z-index 10000
  if support-for-ie
    _position absolute
    _top unquote("expression(documentElement.scrollTop)")

  .inner
    border-bottom 1px solid #D9D9D9

  .comparison-table
    .tb-header
      td
        padding 10px 15px
        background #FFF

      .switcher
        margin-top 0

        .trigger
          margin-top 0

        .ui-dropdown
          top 62px


// 查看大图页
// ------------------------------
.album
  border 1px solid common-border-color
  padding 20px 20px 40px

  .album-head
    border-bottom 1px solid common-border-color
    padding-bottom 5px
    clearfix()

    .name
      margin 0
      font-size 24px
      font-weight normal
      color gray-darker

    .status
      float right
      margin-top 13px
      color gray
      font-size 14px

  .album-body
    text-align center

  .origin-pic
    width 600px
    margin 30px auto 15px

    .title
      font-size 18px
      line-height 46px

    .pages
      font-size 14px
      color gray
      line-height 40px

    .pic
      position relative
      size 600px 450px
      overflow hidden

      img
        display block
        background url("../img/loading_32.gif") no-repeat center center

    .prev
    .next
      position absolute
      top 50%
      margin-top -35px
      size 30px 70px
      hide-text()
      @extend $album-arrows
      opacity 0

    .prev
      left -30px
      transition left .2s ease-in

      &:hover
        background-position -40px 0

    .next
      right -30px
      background-position -80px 0
      transition right .2s ease-in

      &:hover
        background-position -120px 0

    .show-prev
      .prev
        left 15px
        opacity 1

    .show-next
      .next
        right 15px
        opacity 1

  .thumbnails
    position relative
    width 646px
    margin 0 auto

    .pics-container
      width 646px
      overflow hidden

      ul
        width 10000px
        remove-list-style()
        clearfix()

      li
        float left
        width 126px
        margin-right 4px
        if support-for-ie
          _display inline

        img
          display block
          border 3px solid transparent
          background url("../img/loading_16.gif") no-repeat center center

        span
          display block
          line-height 22px

      .active
      a:hover
        text-decoration none

        img
          border-color #FFAE54

    .prev
    .next
      position absolute
      top 50%
      margin-top -32px
      size 24px 42px
      @extend $album-thumb-arrows
      hide-text()

    .prev
      left -40px

      &:hover
        background-position -40px 0

    .next
      right -40px
      background-position -80px 0

      &:hover
        background-position -120px 0

