// 学校库设置
// ==================================================

// 灰度色
// ------------------------------
black = #000
gray-darker = #272727
gray-dark = #4D4D4D
gray = #808080
gray-light = #999
gray-lighter = #ccc
white = #FFF

// 彩色
red = #FF5D38
orange = #FFA201
green = #3EBF23
blue = #50A8F3

// 超链接色
// ------------------------------
// 正常状态
link-color = gray-darker
// 滑过状态
link-color-hover = blue

// 高亮链接
link-highlight-color = blue

// 按钮配色
// ------------------------------
// 普通按钮
button-background-color = #F1F1F1
button-border-color = #D4D4D4

// 主按钮
button-primary-background-color = orange
button-primary-border-color = orange

// 按钮禁用状态
button-disabled-background-color = #F2F2F2
button-disabled-border-color = #F2F2F2

// 边框
// ------------------------------
common-border-color = #E5E5E5

// 排版
// ------------------------------

// 字体集
arial = Arial, Tahoma, "Helvetica Neue", Helvetica, sans-serif
tahoma = Tahoma, "Helvetica Neue", Helvetica, Arial, sans-serif
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
times = "Times New Roman", Times, serif
yahei = "Hiragino Sans GB", "Microsoft Yahei", "SimSun"
heiti = "SimHei"
songti = "SimSun"

// 默认字体
font-stack = yahei
font-size = 12px
font-color = #272727
line-height = 1.5


// 栅格
// ------------------------------
// 列数
grid-columns = 20
// 列宽
grid-column-width = 30px
// 列距
grid-gutter-width = 20px
// 行宽980px
grid-row-width = grid-columns * grid-column-width + grid-gutter-width * (grid-columns - 1)

// 支持Internet explorer？
support-for-ie = true

// 元件层级
// ------------------------------
// 下拉
z-index-dropdown = 1000
// 提示信息
z-index-tooltip = 1010
// 遮罩
z-index-backdrop = 1020
// 浮层
z-index-modal = 1030

// 浮层
modal-width = 490
modal-height = 200

// 线上样式表路径
server = "http://file.gaofen.com/html/v6/css/"



