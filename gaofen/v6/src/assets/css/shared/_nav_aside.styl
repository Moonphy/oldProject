// 侧栏导航
// ==============================================

.nav-aside
  .heading
    .title
      padding-left 10px

  ul
    remove-list-style()

  li
    float left
    width 100%
    font-size 14px

    a
    span.top-level
      position relative
      display block
      height 25px
      line-height 25px
      margin-top -1px
      padding 5px 5px 5px 10px
      split()

    a:hover
      background #F7F7F7
      border-radius 0 4px 4px 4px
      color #0C67AA
      z-index 0

    .count
      float right
      font-size 12px
      color #999
      font-weight normal
      margin-right 20px
      if support-for-ie
        _display inline

  .active
    li
      font-size 12px
      font-weight normal

      .mon
        float left
        width 30px
        margin-right 13px
        text-align right
        color #999
        if support-for-ie
          _display inline

      a
        padding-left 9px

        &:hover
          color #0C67AA

    .top-level
    .active a
      background-color #66B1EC
      border-radius 4px
      font-weight bold
      z-index 10
      color #FFF

      &:hover
        text-decoration none

      .mon
        color #FFF

    span.top-level
      split()
      color #999
      font-weight normal
      z-index 0

      i
        padding-right 11px

    .count
      color #FFF


































