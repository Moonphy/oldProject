// 元件：主导航栏
// ==================================================

.navbar
  margin-bottom 10px
  background #3397E4
  // border-radius 4px

  // 搜索
  .form-search
    size 182px 20px
    // border 1px solid #1C79C1
    margin 6px 10px 0 0
    padding 5px
    background #FBFBFB
    // border-radius 3px
    overflow hidden
    if support-for-ie
      _display inline

    .search-query
      float left
      border none
      background transparent
      size 140px 18px
      line-height 18px
      padding 1px 4px

    .search-btn
      float right
      border-left 1px solid #E3E3E3

  .form-search-focus
    // border-color #0A5793
    background white
    // box-shadow inset 0 1px 2px rgba(0, 0, 0, .2)

    .search-query
      color #222

  // 链接
  .links
    margin-right 20px
    if support-for-ie
      _display inline

    a
      line-height 42px
      color #FFF
      margin-left 20px

  // 导航
  .nav
    remove-list-style()
    height 42px
    overflow hidden
    if support-for-ie
      *position relative

    li
      float left
      margin-left -1px

      a
        display inline-block
        height 42px
        background url("../img/nav_split.png") no-repeat left
        line-height 42px
        padding 0 19px
        color white
        font-size 14px
        transition background-color .2s

        &:hover
          position relative
          background #0075C6
          z-index 10
          text-decoration none

      i
        absolute right 7px top 7px
        size 19px 12px

    // 带new/hot图标
    .nav-new
    .nav-hot
      a
        position relative
        padding-right 25px

    .nav-bbs
      a
        position relative


