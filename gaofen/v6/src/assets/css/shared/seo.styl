// 简介：定义高分网SEO页面样式
// 维护人：张盛志
// ==================================================

// 配置
@import "../shared/_settings"

// Nib
@import "nib"

// 混入声明
@import "../partials/_mixins"

// 样式重置
@import "../partials/_reset"

// 占位符
@import "../partials/_placeholders"

body
  margin 0
  padding 0
  background url(img/seo/bg.png)
  font-family font-stack
  font-size font-size
  line-height line-height
  color font-color

// 超链接
// ------------------------------
a
  color link-color
  text-decoration none

  &:hover
    color link-color-hover
    text-decoration underline

#header
  size 100% 63px

  .inner
    clearfix()
    width 1000px
    margin auto

  .nav
    float right
    margin 25px 10px 0 0
    font-size 14px
    if support-for-ie
      _display inline

    a
      color #989898

    i
      font-style normal
      color #616161
      margin 0 10px

  .logo
    float left
    margin 19px 0 0 5px
    size 339px 44px
    pngfix "img/seo/logo.png" "shared/"
    if support-for-ie
      _display inline

.container
  .inner
    position relative
    width 990px
    margin 0 auto
    background #FFF
    border 5px solid #838383
    box-shadow 0 0 25px rgba(0, 0, 0, .8)

  .pager
    absolute right bottom -50px

    a
      display inline-block
      line-height 24px
      padding 0 15px
      background #E7F2F6
      color #333

      &:hover
        background #D7E6EB
        text-decoration none

#footer
  line-height 20px
  color #989898

  .inner
    width 1000px
    margin auto

  a
    color #989898

  .foot-links
    margin 15px 0 3px

    i
      font-style normal
      color #616161
      margin 0 10px

// 内容
.keyword-list
  position relative
  remove-list-style()
  size 990px 485px

  li
    position absolute
    size 180px 135px

    .tag
      height 100%

    a
      display block
      size 100% 100%
      cursor pointer
      text-align center
      transition background .4s

      span
        margin 0 15px
        display inline-block
        vertical-align middle
        text-decoration none

      i
        display inline-block
        height 100%
        vertical-align middle

// 配色
light-blue = #D8F0F6
blue = #2A83C5
dark-blue = #3D7786
light-green = #DEF6F0
dark-green = #467066
light-cyan = #BCECFC
light-red = #F6E7E1
dark-red = #C76740
light-brown = #F6F3E7
dark-brown = #937242
dark-gray = #202020

// x坐标，y坐标，宽度，高度，背景色，字体颜色，字号，行高
tags= (31px 30px 180px 64px light-blue dark-blue 16px 1.3) (31px 101px 180px 64px light-cyan dark-gray 16px 1.3) (218px 30px 180px 135px light-blue dark-blue 25px 1.3) (405px 30px 180px 135px light-red dark-red 22px 1.3) (592px 30px 180px 135px light-green dark-green 22px 1.3) (779px 30px 180px 135px light-red dark-red 22px 1.3) (31px 175px 367px 135px light-cyan blue 36px 1.3) (405px 175px 273px 135px light-cyan blue 26px 1.3) (685px 175px 274px 64px light-brown dark-gray 19px 1.3) (685px 246px 274px 64px light-brown dark-gray 19px 1.3) (31px 320px 210px 135px light-brown dark-brown 24px 1.3) (248px 320px 243px 135px light-brown dark-brown 24px 1.3) (498px 320px 244px 64px light-green dark-green 16px 1.3) (498px 391px 244px 64px light-green dark-green 16px 1.3) (749px 320px 210px 135px light-blue dark-blue 24px 1.3)


for tag, index in tags
  .keyword-list
    .t-{index + 1}
      left tag[0]
      top tag[1]
      size tag[2] tag[3]

      .tag
        line-height tag[7]

      a
        background tag[4]
        color tag[5]
        font-size tag[6]

        &:hover
          background darken(tag[4], 10%)







































