// ==================================================

.link-cloud
  position relative
  margin-top 25px
  padding 15px 15px 10px
  border 1px solid #DEDEDE
  clearfix()

  h3
    absolute left 10px top -12px
    margin 0
    padding 0 5px
    background #FFF
    font-size 14px
    color #222

  a
    float left
    margin-right 12px
    line-height 24px
    white-space normal
    color #454545
    if support-for-ie
      _display inline

