// 元件：按钮
// 使用a标签的HTML结构：
// <a class="btn" href="#">Submit</a>
// 使用input或button标签的HTML结构：
// <label class="btn"><input type="submit" value="Submit" /></label>
// <label class="btn"><button type="submit">Submit</button></label>
// ==================================================

// 一般按钮
// ------------------------------
.btn
  font-size 14px
  border 1px solid button-border-color
  background-color button-background-color
  vertical-align middle
  transition background-color .3s, border-color .3s
  // background linear-gradient(top, #F8F8F8, #F1F1F1)
  // border-radius 4px
  if support-for-ie
    _overflow hidden

  color #4A4A4A !important

  &:hover
    color #4A4A4A !important
    text-decoration none
    cursor pointer
    border-color darken(button-border-color, 8%)
    background darken(button-background-color, 8%)
    // background linear-gradient(top, #F0F0F0, #E5E5E5)

  input
  button
    height 28px
    color #4A4A4A
    padding 6px 15px
    border none
    background transparent
    color #4A4A4A
    outline none
    if support-for-ie
      _overflow visible

a.btn
span.btn
  inline-block()
  height 28px
  line-height 28px
  padding 0 25px
label.btn
  float left

// 主操作按钮
// ------------------------------
.btn-primary
  background-color button-primary-background-color
  // background linear-gradient(top, #F89356, #F48B4C)
  font-weight bold
  border-color button-primary-border-color
  border-radius 4px

  color #FFF !important

  &:hover
    color #FFF !important
    border-color darken(button-primary-border-color, 8%)
    background darken(button-primary-background-color, 8%)
    // background linear-gradient(top, #EA8950, #E57F41)

  input
  button
    color #FFF
    font-weight bold

// 禁用状态
.btn-disabled
.btn-disabled:hover
  font-weight bold
  background-color button-disabled-background-color
  // background linear-gradient(top, #EEA071, #EEA071)
  border-color button-disabled-border-color
  color #808080 !important
  cursor default

// 按钮尺寸
// ------------------------------
.btn-small
  font-size 12px
  border-radius 2px

  input
  button
    height 24px
    padding 5px 20px 4px

a.btn-small
  height 24px
  line-height 24px
  padding 0 15px

.btn-large
  font-weight normal
  font-size 20px

  input
  button
    height 40px
    padding 8px 40px 9px
    font-weight normal

a.btn-large
  height 40px
  line-height 40px
  padding 0 40px

// QQ咨询按钮
.btn-qq-consult
  height 26px
  line-height 26px
  padding 2px 10px

  span
    display inline-block
    padding-left 30px
    font-weight normal










































