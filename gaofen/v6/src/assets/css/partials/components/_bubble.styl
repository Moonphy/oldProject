// 元件：气泡提示
// ==================================================

// 基本提示气泡
// HTML结构：
// <div class="bubble">您已经投过票啦</div>
.bubble
  absolute top left
  width 100px
  padding 10px
  border 2px solid #DFDFDF
  color gray-darker

  // 小三角
  .arrow
    absolute left 30px bottom -2px

    .arrow-border
      absolute: left top
      caret #DDD 6px down
    .arrow-body
      absolute left top -2px
      caret #FFF 6px down

  // 关闭图标
  .close
    right 2px
    top 2px
    background-position -18px -295px

    &:hover
      background-position -18px -325px

// 错误提示气泡：用于登录表单验证不通过时显示错误信息
// HTML结构：
// <div class="bubble bubble-error">用户名或密码或密码错误<span class="arrow"><i class="arrow-border"></i><i class="arrow-body"></i></span><a class="close" href="#">&times;</a></div>
.bubble-error
  top -36px
  left 90px
  width 135px
  padding 4px 30px
  @extend $icon-help
  background-color #FFFBEC
  background-position -7px -55px
  border 1px solid #F0DB8E
  color #E72E2E

  .arrow
    bottom -1px

    .arrow-border
      caret #F0DB8E 6px down
    .arrow-body
      top -1px
      caret #FFFBEC 6px down

// 信息提示气泡
// HTML结构：
// <div class="bubble bubble-info">您已经投过票啦</div>
.bubble-info
  padding-left 35px
  @extend $icon-help
  background-color #FFF
  background-position -4px -109px

// 成功提示气泡
// HTML结构：
// <div class="bubble bubble-success">投票成功</div>
.bubble-success
  width 60px
  padding-left 35px
  @extend $icon-help
  background-color #FFF
  background-position -4px 11px

// 奖励气泡
// HTML结构：
// <div class="bubble bubble-award">高分币+10</div>
.bubble-award
  width 122px
  padding 4px 10px 4px 35px
  border 1px solid #F0DB8E
  background-color #FFFBEC
  background-position -4px 5px

  .arrow
    bottom -1px

    .arrow-border
      caret #F0DB8E 6px down
    .arrow-body
      top -1px
      caret #FFFBEC 6px down































