// 元件：下拉选择框
// ==================================================

.ui-select
  position relative
  inline-block()
  width 132px
  background #FFF

  .ui-select-trigger
    position relative
    border-radius 2px
    border 1px solid common-border-color
    margin 1px
    height 24px
    line-height 24px
    padding 0 25px 0 10px
    color #808080
    cursor pointer
    _padding-right 10px

    span
      absolute left top right 25px
      z-index 0
      text-indent 10px
      height 26px
      overflow hidden
      _width 100%

    input
      absolute left top
      display block
      width 100%
      opacity 0
      z-index -1

    select
      absolute left top
      size 100% 25px
      font-size 12px
      opacity 0
      z-index 10
      font-family yahei

    .triangle
      absolute right 10px top 10px
      caret #4AA9ED 4px down

  .ui-dropdown
    top 34px
    z-index 100

    .ui-dropdown-in
      border-radius 2px

    .query-result
      height 192px

    li
      font-size 12px

.ui-select-selected
  .ui-select-trigger
    color gray-darker

.ui-select-active
  .ui-select-trigger
    border 2px solid blue
    margin 0