// 元件：浮层
// ==================================================

// 修正IE6振动bug
if support-for-ie
  html
  body
    _background-image url(about:blank)
    _background-attachment fixed
    _height 100%

// 遮罩层
.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index z-index-backdrop
  background-color black
  opacity(.18)
  size 100% 100%
  if support-for-ie
    _position absolute
    _top unquote("expression(documentElement.scrollTop)")

  iframe
    size 100% 100%
    opacity(0)

// 默认浮层
.modal
  modal()

  .modal-header
    background #F7F7F7

    h3
      margin 0
      padding 6px 15px 5px
      font-size 14px
      font-weight normal
      color #4A4A4A

  .modal-body
    padding 20px

    // 浮层中的提示
    .alert
      margin 0

      p
        font-size 14px

    .actions
      margin-bottom 20px

  // 浮层中的表单
  .form
    .form-row
      .controls
        width auto

  .modal-footer
    clearfix()
    split(top)
    margin 0 20px 20px

  .actions
    clearfix()

    .loading-mini
      float left
      size 16px
      margin 7px 0 0 17px

// 全局登录浮层
// ------------------------------
.modal-login
  size 680px 370px
  center-modal(680, 370)

  .modal-body
    clearfix()

  // 表单
  .form
    position relative
    float left
    width 372px
    margin 25px 0
    border-right 1px solid common-border-color

    h2
      margin 0 0 22px 45px
      font-weight normal
      font-size 25px
      color #3A3A3A

    .help-inline
      margin-left 10px

    .input-text
      width 238px

    .form-row
      margin-bottom 20px

      .control-label
        width 72px

    .operations
      position relative
      margin-top 7px

      a
        absolute right top
        highlight-link()

    .actions
      margin 10px 0 0 81px

  // 使用合作网站账号登录
  .other-login
    float right
    width 226px

    .hd
      margin 39px 0 24px

      h2
        margin 0
        font-weight normal
        font-size 14px
        color #3A3A3A

    .quick-login
      padding 0

      a
        float left
        margin 0

      .btn-weibo-large
        margin-bottom 15px

    .actions
      margin-top 7px

      a
        highlight-link()

// 验证邮箱
.modal-activate
  size 506px 350px
  center-modal(506, 350)

  .modal-body
    padding 45px 70px

    h2
      margin 0 0 15px
      font-size 22px
      font-weight normal
      color #3A3A3A

    p
      font-size 14px
      margin 0
      line-height 26px

      .hl-red
        color #F00

    .actions
      margin-top 30px

    .hints
      margin-top 10px
      color #999

      a
        highlight-link()

      .icon-success
        display inline-block
        @extend $icon-help
        padding-left 22px
        margin-left 20px
        background-position -12px 1px

      .icon-error
        display inline-block
        @extend $icon-help
        padding-left 22px
        margin-left 20px
        background-position -12px -59px

      .loading-mini
        display inline-block
        padding-left 20px
        margin-left 20px
        background-position 0 1px

// End:完善个人信息浮层

// 完善个人信息浮层
// ------------------------------
.modal-user-info
  center-modal(490, 310)

  .form
    margin-top 25px

    .form-row
      margin-bottom 15px

      .controls
        width 200px

// 全局提示信息浮层
// ------------------------------
.modal-tips
  center-modal(390, 220)
  size 390px 220px

  .alert
    margin-top 0 !important

  .actions
