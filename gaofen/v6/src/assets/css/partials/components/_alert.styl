// 元件：提示
// ==================================================

// 默认提示
.alert
  position relative
  padding 10px 30px 0 80px
  if support-for-ie
    *zoom 1

  h3
    color #222
    font-size 22px
    margin 0 0 20px
    font-weight normal

  p
    font-size 14px
    line-height 28px
    margin 0

  .hints
    margin-top 20px
    font-size 12px
    color #4A4A4A
    line-height 20px

  .ico
    absolute left 20px top 5px

  .actions
    margin-top 30px

// 成功提示
.alert-success
  h3
    color #3D9317

// 单行提示
.alert-single
  .info
    p
      margin 5px 0 0

// tooltip 提示
.tooltip
  .alert
    padding 5px 0 0 35px

    h3
      margin-bottom 0
      font-size 14px
      font-weight normal

    p
      margin-bottom 4px
      font-size 12px
      color #4A4A4A

    .ico
      left 10px
      top 7px
