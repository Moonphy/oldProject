// 图文介绍
// ==================================================

.thumb-info-details
  margin 0 0 25px 5px

  .pic
    position relative
    float left
    width 160px

  .thumb
    margin-bottom 15px

    img
      width 160px

  .info
    position relative
    margin-left 190px
    if support-for-ie
      _margin-left 187px
      _zoom 1

    h3
      margin 0 25px 20px 0
      color #0F0F0F
      font-size 16px

      span
        margin-left 20px
        color #999
        font-weight normal
        font-size 12px

    .details
      margin-right 180px

      p
        margin 0 0 10px

        a:link
          color link-highlight-color

        span
          color #4A4A4A

        i
          font-style normal
          font-weight bold

    .actions
      absolute right 20px top 130px
      width 130px
      text-align center

      .btn
        padding 5px 0
        width 120px

      .icon-clock
        display inline-block
        padding-top 3px
        padding-bottom 3px
        margin-top 5px
        color #999



















































