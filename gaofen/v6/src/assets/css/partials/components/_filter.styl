// 元件：过滤器
// ==================================================

.filter-head
  margin-bottom 15px
  padding-bottom 10px
  border-bottom 2px solid #DFDFDF

.filter
  overflow hidden
  padding 5px 0
  if support-for-ie
    *zoom 1

  .label
    float left
    color #808080
    padding 2px 5px 2px 0
    font-weight bold
    if support-for-ie
      _display inline

    .gap
      inline-block()
      width 12px

  .filter-cont
    margin-left 40px
    if support-for-ie
      _margin-left 37px

    a
    span
      float left
      padding 2px 10px
      margin-right 5px
      white-space wrap

    a
      color #4C4C4C

    a:hover
    .active
      background #66B1EC
      color #FFF
      text-decoration none

.filter-s2
  background #F3F3F3
  padding 5px 10px
  clearfix()
  margin -5px 0 20px

  span
    float left
    position relative
    padding-right 20px
    margin-right 20px

  .close
  .close:hover
    background url("img/course/close.png") no-repeat 1px 1px
    right 0
    top 2px
