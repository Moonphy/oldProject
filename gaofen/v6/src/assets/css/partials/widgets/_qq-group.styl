// 挂件：QQ群
// ==================================================
.widget-qq-group
  border 1px solid common-border-color
  margin-top 25px

  .qq-group
    padding 0 25px

    .tit
      font-size 15px
      font-weight bold
      border-bottom 1px solid common-border-color
      line-height 28px
      padding-top 8px

    .info
      padding 12px 0 15px
      color #666

      a
        float right
        padding-left 12px
        background url("../img/icon_plus.png") no-repeat 0 50%

      span
        display block
        clearfix()
        line-height 22px
        if support-for-ie
          _display inline

        i
          font-weight bold
