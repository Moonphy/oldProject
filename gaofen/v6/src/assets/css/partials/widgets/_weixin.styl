.widget-weixin
  border-top 4px solid #0073CC

  .inner
    padding  12px 10px 12px 20px
    border 1px solid common-border-color
    border-top none
    clearfix()

    .qrcode
      float left
      size 90px

    .info
      margin-left 100px
      if support-for-ie
        _margin-left 97px

      p
        margin 0
        font-size 14px
        color #808080

      .tit
        color #4D4D4D
        font-size 16px
        font-weight bold
        margin-bottom 5px