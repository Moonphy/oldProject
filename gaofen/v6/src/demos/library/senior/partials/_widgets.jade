//------------------------------
//- 挂件：估分选校
//------------------------------
mixin widget-choose-school
  .widget.widget-box.widget-query.widget-choose-school
    .widget-box-hd
      .title
        | 估分选校
        span （精准推荐学校）
    .widget-box-bd.form
      .form-row.error
        .control-label 考生所在区域：
        .controls
          +select({value:"选择区域", options:{count:8, text:"天河区"}})
      .form-row.error
        .control-label 中考总分/估分：
        .controls
          input.input-text.input-null#input01(type="text", value="", placeholder="请输入分数")
      .actions.error
        +button({text:"去选校", option:"primary", element:"button"})
        .help-inline 请输入不高于810的正整数

//------------------------------
//- 挂件：历年分数线查询
//------------------------------
mixin widget-score-query
  .widget.widget-box.widget-query.widget-score-query
    .widget-box-hd
      .title
        | 历年分数线查询
    .widget-box-bd.form
      .form-row
        .control-label 考试年份：
        .controls
          +select({value:"请选择年份", options:{count:5, text:"2010年"}})
      .form-row
        .control-label 录取批次：
        .controls
          +select({value:"提前批", options:{count:5, text:"提前批"}, selected:true})
      .form-row
        .control-label 招生范围：
        .controls
          +select({value:"不限", options:{count:5, text:"天河区"}, selected:true})
      .actions
        +button({text:"查询", option:"primary", element:"button"})








