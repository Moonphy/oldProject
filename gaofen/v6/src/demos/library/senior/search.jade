    .row.row14-6
      .span14
        // Start: 搜索结果为空
        .alert.alert-info.alert-single.hidden
          i.ico
          .info
            p 暂无学校，换个条件试试？
        // End: 搜索结果为空

        // Start: 学校列表
        .school-thumb-info-list
          ul
            - for(var i=1; i<=10; i++)
              +school-thumb-info-list-item
          // 查看更多
          .view-more
            a(href="#") 查看更多学校
            .loading-mini
          // Loading
          .view-more.view-loading
            a(href="#") 查看更多学校
            .loading-mini
      .span6
        // Start: 侧栏挂件-估分选校
        +widget-choose-school
        // End: 侧栏挂件-估分选校

        // Start: 侧栏挂件-热门学校推荐
        +widget-rec-school({meta:true})
        // End: 侧栏挂件-热门学校推荐

        // Start: 侧栏挂件-备考资料推荐
        +widget-rec-data({date:true})
        // End: 侧栏挂件-备考资料推荐

        // Start: 侧栏挂件-您浏览过的学校
        +widget-history
        // End: 侧栏挂件-您浏览过的学校

