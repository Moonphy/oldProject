block javascript
    script.
        // 第一个图
        var wrapW = document.getElementsByClassName("y-value")[0].offsetWidth,
            scaleW = wrapW * 0.9;

        var valueY = document.getElementsByClassName("valueY");

        var max = valueY[2].attributes["data-value"].value;

        for(var i=0;i<valueY.length;i++) {

            var N = valueY[i].attributes["data-value"].value
            valueY[i].style.width = N / max * scaleW + 'px';
        }

        // 第二个图
        var scaleH = 150;
        var valueX = document.getElementsByClassName("valueX");

        for(var j=0;j<valueX.length;j++) {

            var H = valueX[j].attributes["data-value"].value
            console.log(H)
            valueX[j].style.height = H * scaleH + 'px';
        }


