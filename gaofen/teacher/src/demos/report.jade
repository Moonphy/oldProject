                                .x-value
                                    .valueX(data-value='0.85') 85%
                                .x-name 02
                            .col
                                .x-value
                                    .valueX(data-value='0.92') 92%
                                .x-name 03
                            .col
                                .x-value
                                    .valueX(data-value='0.86') 86%
                                .x-name 04
                            .col
                                .x-value
                                    .valueX(data-value='0.82') 82%
                                .x-name 05
                            .col
                                .x-value
                                    .valueX(data-value='0.90') 90%
                                .x-name 06
