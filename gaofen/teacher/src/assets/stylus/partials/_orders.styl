// 订单相关样式
// ------------------------------

// Tab
.tab
  position relative
  height 4.4rem
  overflow hidden
  visibility hidden

  .tab-items-container
    height 4.4rem
    overflow-y hidden
    overflow-x auto

  .tab-items
    width 1000px

  a
    line-height 2.4rem
    display inline-block
    padding 1rem 0
    font-size 0

    span
      display inline-block
      padding 0 2rem
      color gray
      font-size 1.6rem

    i
      font-size 1.2rem

    &.active
      span
        color green


    & + a
      span
        border-left 1px solid #D9D9D9

  &:before
  &:after
    position absolute
    top 0
    content ""
    size 3rem 4.4rem

  &:before
    left 0
    background linear-gradient(90deg, #F0F0F0, rgba(240, 240, 240, 0))

  &:after
    right 0
    background linear-gradient(90deg, rgba(240, 240, 240, 0), #F0F0F0)

.scroll-start
  &:before
    display none

.scroll-end
  &:after
    display none

// 订单列表
.order-list-item
  position relative
  border-bottom .1rem solid #E5E5E5
  background #FFF
  font-size 1.4rem

  .order-link
    position relative
    display block
    padding 1.2rem 1.5rem

    &.active
      background link-active-background

  .btn
    absolute right 1.5rem bottom 1.5rem
    padding 0.6rem 1.5rem
    font-size 1.6rem

  h3
    margin 0
    font-size 1.6rem

    span
      & + span
        margin-left 2rem

  .info
    color gray

    p
      margin 0
      line-height 2.4rem

  i
    color #ffffff
    absolute right 1.5rem bottom 1.5rem
    padding 2px 4px 1px
    border-radius 2px
    font-size 0.8rem


// 订单详情
// ------------------------------
.order-summary
  clearfix()
  padding 1.2rem 1.5rem 0

  .thumb
    float left
    size 9rem

    .ui-avatar
      margin 0 auto .8rem

  .info
    position relative
    margin-left 10rem

    .subject
      font-size 1.4rem

    .date
      color gray

.radio-group
  input[type="radio"]
    absolute left top
    opacity 0

  label
    position relative
    display inline-block
    margin 0 .5rem
    border-radius 5rem
    background #D9D9D9
    font-size 1.3rem
    size 4.7rem 1.8rem
    padding .3rem 0 .3rem 1.6rem
    line-height 2rem
    text-align center
    color #FFF

    &:before
      absolute left .8rem top .3rem
      size 1.8rem
      line-height 1.8rem
      font-size 1.6rem
      text-align center

  .icon-good.checked
  .icon-rate-5.checked
    background orange

  .icon-normal.checked
  .icon-rate-3.checked
    background blue

  .icon-bad.checked
  .icon-rate-1.checked
    background gray

.row-rate
  display flex
  margin-bottom 1rem

.label
  display inline-block
  font-size 1.6rem
  height 2.4rem
  line-height 2.4rem
  vertical-align middle
  padding-top .4rem
.label-sm
  display block
  font-size 1.2rem
  height 2.4rem
  line-height 2.4rem
  vertical-align middle
  padding-top .5rem
.order-details
  .actions
    .btn
      margin-bottom 1rem

// 未付款
.form-pay
  margin 1.5rem

  .order-info
    padding 1rem 0
    border 1px solid #E6E6E6
    border-width 1px 0
    font-size 1.4rem
    color gray

    p
      margin 0
      line-height 2.4rem

  .total
    padding-top 1.5rem
    font-size 1.6rem
    text-align center

  .actions
    margin-top 6rem
    position relative

    .error-message
      absolute left 1rem bottom 4rem

  .btn
    i
      font-size 2.2rem

// 评价表单
.form-comment
  textarea
    line-height 2rem
    resize none
    font-size 1.2rem
    color gray-dark
    outline none

  .radio-group
    text-align center
    margin-bottom 2rem

  .row-message
    position relative
    border .1rem solid #E6E6E6
    border-radius 0.4rem
    padding 1rem 1.5rem 3rem
    box-sizing border-box

    textarea
      border none
      display block
      size 100% 10rem
      padding 0

    .text-count
      absolute right 1rem bottom 1rem
      color gray

// 评论详情
.comment-details
  margin 1.5rem
  padding-top 1.5rem
  border-top .1rem solid #E6E6E6

  .comment
    clearfix()

    .label
      float left
      font-size 1.6rem
      line-height 2.4rem

  .comment-cont
    margin 1rem 0
    overflow hidden

  .comment-status
    font-size 1.6rem
    color gray
    margin 2rem 0
    text-align center
