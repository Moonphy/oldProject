// 元件：学业报告页
// ------------------------------
// 星星
@import "partials/components/_stars"
// label
@import "partials/components/_label"

* {
  -webkit-touch-callout:none;
  -webkit-user-select:none;
  -khtml-user-select:none;
  -moz-user-select:none;
  -ms-user-select:none;
  user-select:none;
}
textarea,input{
  -webkit-user-select:auto;
}

$clearfix
  &:before
  &:after
    display table
    content ""
    line-height 0
  &:after
    clear both
.report-page
  background-color white
  .plr-1
    padding 0 1.5rem
    text-align center
    box-sizing border-box
  .h3
    margin 1.2rem 0 1.2rem 1rem
    border-left 0.3rem solid #98b8d9
    text-indent 0.5rem
    font-size 1.6rem
    line-height 1
    text-align left
  h3
    margin 1.2rem 0 0.6rem 0
    font-size 1.6rem
    background-color #3498db
    color white
    border-radius 2rem
    display inline-block
    padding 0.5rem 3rem
    line-height 1
  .mb--30
    margin-bottom -50px
  .table-wrap
    border .1rem solid #dddddd
    border-radius 1rem
    overflow hidden
  .mt--20
    margin-top -20px
  .table-v
    .tr
      display flex
      flex-direction row
      justify-content flex-start
      text-align center!important
      .th
      .td
        border 1px solid #dddddd
        margin -1px 0 0 -1px
        padding 0.5rem 0
      .th
        background-color #f2f2f2
        color #999999
        width 20%
      .td
        width 30%
        &:last-child
          border-right none
      &:last-child
        .th
        .td
          border-bottom none
        .td
          width 80%
          border-right none
  .total-wrap
    padding 2rem 1.5rem 1rem 1.5rem

  .row-flex
    display flex
    flex-direction row
  .flex-around
    justify-content space-between

  .row
  .col
    &:nth-child(1)
      .valueX
      .valueY
        background-color #b7e9a8
    &:nth-child(2)
      .valueX
      .valueY
        background-color #8ed8ed
    &:nth-child(3)
      .valueX
      .valueY
        background-color #eed09c
    &:nth-child(4)
      .valueY
      .valueX
        background-color #f0b6b6
    &:nth-child(5)
      .valueY
      .valueX
        background-color #ddbeed
    &:nth-child(6)
      .valueX
      .valueY
        background-color #c3eee0
    &:first-child
      .x-value
        border-left 2px solid #b2b2b2
    &:last-child
      .y-name
        padding-bottom 0.8rem
      .y-value
        border-bottom 2px solid #b2b2b2

  .y-name
    width 1.4rem
    line-height 1.2
    float left
    padding 0.6rem 0.5rem
    color #999999
    background url("../images/y-axis.png") no-repeat right center
    background-size 4px 100%

  .y-value
    //flex 1
    margin-left 2.4rem
    height 4rem
    padding 0.7rem 0
    background url("../images/y-axis-bg.png") no-repeat 0 0
    background-size 66.7% 100%
    .valueY
      width 1rem
      height 4rem
      line-height 4rem
      color white
      transition all 0.5s
      text-align right
      padding-right 0.5rem
      box-sizing border-box
      font-size 1.8rem
  .x-name
    color #999999
    background url("../images/x-axis.png") no-repeat 0 0
    font-size 1.6rem
    background-size 100% 4px
  .x-value
    height 15rem
    position relative
    background url("../images/x-axis-bg.png") no-repeat 0 center
    background-size 100% 50%
    display flex
    align-items flex-end
    .valueX
      width 80%
      max-width 4rem
      margin 0 auto
      height 1rem
      color white
      font-size 1.4rem
      transition all 0.5s

  .table
    .tr
      display flex
      flex-direction row
      justify-content flex-start
      text-align center!important
      .th
      .td
        width 25%
        border 1px solid #dddddd
        margin -1px 0 0 -1px
        padding 0.5rem 0
        &:last-child
          border-right none
      .th
        color white
        background-color #546679

  .analysis-wrap
    @extend $clearfix
    padding 0 1rem 0 2rem
    position relative
    .img-wrap
      font-size 1.6rem
      img
        margin-top 0
        margin-bottom 2rem
      .ti-num
        line-height 1.2
        span
          color black
          vertical-align top
        &:nth-child(2)
          absolute left 15% top 17%
        &:nth-child(3)
          absolute right 12% top 17%
        &:nth-child(4)
          absolute left 15% bottom 22%
        &:nth-child(5)
          absolute right 12% bottom 22%

    .clearfix
      overflow hidden
    span
      color #999
      vertical-align middle
    .analysis-container
      display flex
      flex-direction row
      margin 1rem auto
      .analysis-row
        flex 1
        justify-content space-around
      .col
        flex 1
    .Y-axis-N
      width 30px
      height 15rem
      div
        text-align center
        color #ddd
        font-size 1.6rem
        line-height 1
        &:nth-child(1)
          padding-top 3rem
        &:nth-child(2)
          padding-top 2rem
        &:nth-child(3)
          padding-top 2.3rem
  .analysis-detail
    border-top 1px solid #dddddd
    margin-top -1px
    overflow hidden

  .analysis-list
    .list-container
      text-align left
      &:nth-child(1)
        .icon-circle
          background-color #b7e9a8
      &:nth-child(2)
        .icon-circle
          background-color #8ed8ed
      &:nth-child(3)
        .icon-circle
          background-color #eed09c
      &:nth-child(4)
        .icon-circle
          background-color #f0b6b6
      &:nth-child(5)
        .icon-circle
          background-color #ddbeed
      &:nth-child(6)
        .icon-circle
          background-color #c3eee0
    .icon-circle
      display inline-block
      size 0
      padding 0.6rem
      border-radius 100%
      margin 1rem
      vertical-align middle
    h4
      display inline-block
      text-align left
      margin 0
      line-height 1.4
      vertical-align middle
    .flex-around
      margin-bottom 1rem



  .bg-grey
    background-color #f3f3f3
    padding 1rem
    text-align left

  .img-wrap
    width 100%
    text-align center
    margin 1rem auto 0 auto
    padding 0 0.5rem
    box-sizing border-box
    img
      width 100%
      margin 1rem 0

.analysis-pie
  width 50%
  float left
  padding 1rem
  border-bottom 1px solid #dddddd
  border-right 1px solid #dddddd
  box-sizing border-box
  margin-bottom -1px
  &:nth-child(2n)
    border-right none

  p
    margin 0
    text-align left

  .text-overflow
    white-space nowrap
    text-overflow ellipsis