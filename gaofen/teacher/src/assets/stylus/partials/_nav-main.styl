// 主导航
.nav-main
  absolute left top
  width 100%
  transform translateY(-100%)
  z-index -1
  overflow auto

  ul
    reset-list()
    margin-top 4.6rem
    background #239900

    li
      font-size 1.6rem

      a
        display block
        color #FFF
        line-height 4.4rem
        padding-left 4.4rem

      span
        display block
        border-bottom .1rem solid #29B300

  .menu-cities
    position relative

    li
      a
        padding-left 0

      span
        padding-left 1rem

    .current
      position relative

      &::before
        @extends $iconfont
        absolute right top
        content "\3601"
        size 4.4rem
        line-height 4.4rem
        text-align center
        font-size 2.4rem
        color #FFF

  .menu-tools
    li
      a
        position relative

        &::before
          @extends $iconfont
          absolute left top
          size 4.4rem
          text-align center
          font-size 2.4rem
          color #FFF

      .nav-item-search
        &::before
          content "\3609"

      .nav-item-orders
        &::before
          content "\3615"


.show-nav
  .nav-main
    animation slide-down .4s ease-out both

  .ui-mask
    z-index z-index-header - 20

.hide-nav
  .nav-main
    animation slide-up .4s ease-out both
