.listView-wrap
  list-style none
  margin 0
  padding 0

.listView
  background-color white
  border-bottom .1rem solid #E5E5E5
  padding 1rem

  .listView-container
    display flex
    justify-content space-between
    align-items center
  .icon-right
    font-size 2.4rem
    color grey

.listView-left
  p
    margin 0
    strong
      margin 0 0.5rem
      font-size 1.4rem
    b
      font-size 1.4rem
      margin-left 0.5rem
    span
      margin 0 0.5rem
      color grey
    time
      color grey
      font-size 1.2rem
  .class-hour-total
    color green
    font-size 1.6rem

.fontgreen
  color green

// 课时消耗页
.class-hour
  text-align center
  font-size 1.6rem
  line-height 4.5rem
  .fontgreen
    font-size 1.8rem
    margin-right 0.5rem
  span
    font-size 1.2rem

.listView-container-detail
  padding 1rem
  font-size 1.4rem
  p
    margin 0
  div
    span
    time
      margin 0 0.5rem

.icon-blue
  background-color blue
  color white
  font-size 1rem
  padding 0.2rem 0.5rem
  border-radius 0.2rem
  margin-right 0.5rem

.consume-history-page
.consume-page
  .listView
    background-color white
    border-bottom none
    padding 0.5rem 0
    margin-bottom 1rem
    .listView-container
      padding 0 1rem
      border-bottom .1rem solid #E5E5E5
.nav-class
  width 100%
  display flex
  background rgba(0,0,0,0.6)
  fixed left bottom
  a
    display block
    width 50%
    flex 1
    background-color orange
    color white
    font-size 1.6rem
    line-height 4rem
    text-align center
    margin 1rem
    border-radius 0.2rem

.consume-history-page
  .listView
    .listView-container
      padding 1rem
    .listView-container-detail
      p
        span
        time
          margin 0 0.5rem
        .fontgreen
          margin 0
  .class-hour
    display flex
    justify-content center
    align-items center
    button
      height 3.5rem
      line-height 3.5rem
      padding 0 0.5rem
      border none
      background-color orange
      color white
      border-radius 0.4rem

  .select-date
    width 11rem
    height 3.5rem
    margin 0.5rem
    position: relative
    border 0.1rem solid #E5E5E5
    background-color white
    border-radius 0.4rem
    overflow hidden
    input
      width 100%
      border none
      line-height 3.5rem
      font-size 1.6rem
      padding 0 0.5rem
      absolute left top
      border-radius 0.4rem
      box-sizing border-box
    .icon-down
      absolute right top
      color grey
      font-size 2rem
      line-height 3.5rem

//课时页
.class-hour-page
  .listView
    display flex
    justify-content space-between
    font-size 1.6rem
    time
      margin 0 1rem

//课时详情页
.book-detail-page
  color grey
  .class-hour
    span
      font-size 1.6rem
      margin-right 1.5rem
  .detail-wrap
    background-color white
    padding 1rem
    font-size 1.4rem
    p
      margin 0
  table
    width 100%
    text-align center
    font-size 1.2rem
    line-height 2.2rem
    border 1px solid grey
    font-size 1.2rem
    thead
      background-color #546679
      color white
      th
        border 1px solid white
        font-weight normal
        border-bottom-color #cccccc
        border-top-color #cccccc
        &:first-child
          border-left-color #cccccc
        &:last-child
          border-right-color #cccccc
    .tbody-title
      background-color #97b7d8!important
      color #343434
    tbody
      tr
        &:nth-child(2n)
          background-color #f2f2f2
      td
        border 1px solid #cccccc
        color: #343434