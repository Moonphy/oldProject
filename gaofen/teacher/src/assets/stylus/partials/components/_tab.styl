// 元件: 选项卡
// ------------------------------

.ui-tab
  reset-list()
  display flex
  background #F7F7F7

  li
    flex 1
    flex-basis auto
    height 4.2rem
    line-height 4.2rem
    font-size 1.4rem
    color gray
    border-left .1rem solid #E6E6E6
    border-bottom .1rem solid #D9D9D9
    border-top .2rem solid #F7F7F7
    text-align center

    span
      color red

    &:first-child
      border-left none

    &.ui-tab-item-active
      border-bottom-color #FFF
      border-top-color green
      background #FFF
      color gray-darker