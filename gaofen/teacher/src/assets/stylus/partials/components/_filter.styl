// 元件：下拉选择框
// ------------------------------

.ui-filter
  height 4.4rem
  line-height 4.4rem
  font-size 1.6rem
  border-bottom .1rem solid #D9D9D9
  background #FFF

  & + .ui-filter
    border-left .1rem solid #E6E6E6

  .label
    position relative
    height 4rem
    line-height 4rem
    padding .2em 2rem .2rem 0
    text-indent 1rem
    overflow hidden

    &:before
      absolute right .8rem top 50%
      content "\3612"
      size 2.4rem
      font-size 2.4rem
      line-height 2.4rem
      color #D9D9D9
      margin-top -1.2rem

// 激活状态
.ui-filter-active
  .label
    padding-top 0
    border-top .2rem solid green

    &::before
      color green
