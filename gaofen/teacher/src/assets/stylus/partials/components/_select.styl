// 下拉选择框
.ui-select
  position relative
  height 4.2rem
  overflow hidden
  background #FFF
  border .1rem solid #D9D9D9
  border-radius 0.4rem
  @extend $iconfont

  &::before
    absolute right 1rem top 50%
    content "\3612"
    size 2.4rem
    font-size 2.4rem
    line-height 2.4rem
    color #D9D9D9
    margin-top -1.2rem
    text-align center

  select
    position relative
    display block
    border none
    background none
    appearance none
    outline none
    border-radius 0
    width 100%
    padding-left 1.3rem
    font-size 1.6rem
    height 4.2rem
