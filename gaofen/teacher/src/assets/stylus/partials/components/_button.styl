// 元件：按钮
// ------------------------------

.btn
  border none
  outline none
  background green
  border-radius 0.4rem
  color #FFF
  font-size 1.8rem
  padding 1rem 3rem
  line-height 2.4rem
  text-align center

  &.disabled
    background #D9D9D9
    color gray-light

  &:active
    box-shadow inset 0 .2rem .3rem rgba(0, 0, 0, .3)

  &:visited
    color #FFF

  &.active
    background darken(@background, 8%)

.btn-primary
  background orange

  &.active
    background darken(@background, 8%)

.btn-danger
  background purple

  &.active
    background darken(@background, 8%)

.btn-weixin
  position relative
  padding-left 4.4rem
  background #3FB133
  box-sizing border-box
  padding 0 !important

  i
    font-size 4rem
    margin-right 0.5rem
    vertical-align middle

  span
    inline-block()
    line-height 4.4rem
    vertical-align middle

  &.active
    background darken(@background, 8%)

.btn-block
  display block
  padding 1rem 0
  width 100%

.unread
.had-reward
  background-color #4899df!important
.Nevaluated
  background-color #e50001!important
.evaluated
  background-color #cbcbcb!important