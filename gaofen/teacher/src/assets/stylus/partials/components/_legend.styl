.legend
  text-align center
  margin .8rem 0
  line-height 2.6rem

  span
    display inline-block
    font-size 1.2rem
    color gray

    &:before
      display inline-block
      content ""
      size 2.4rem
      border-radius 1rem
      border .1rem solid #D9D9D9
      vertical-align middle
      margin-right 0.5rem

    & + span
      margin-left 1.5rem

  .over
    &:before
      border-color #FFB980
      background #FFB980

  .disabled
    &:before
      border-color #CCC
      background #CCC

  .scheduled
    &:before
      border-color #4DC4FF
      background #4DC4FF
