// 教师详情
.teacher-info
  clearfix()
  padding 1.5rem 0
  margin 0 1.5rem
  border-bottom 1px solid #E6E6E6

  .thumb
    float left
    size 9rem
    position relative
    .ui-avatar
      margin 0 auto .8rem
    .icon-v
      display inline-block
      size 2.3rem
      line-height 2.5rem
      text-align center
      absolute right -0.6rem bottom -0.3rem
      color #fff
      background-color #ffa200
      border-radius 100%
      font-family arial, sans-serif
      font-size 15px
  .info
    position relative
    margin-left 10rem

    p
      margin 0 6.5rem .7rem 0
      color gray
      line-height 1.6rem
      height 3.2rem
      overflow hidden

  // 认证
  .cert
    margin-bottom .6rem

    .ui-label
      margin-right 0.3rem

  // 属性
  .properties
    span
      // display inline-block
      color gray
      padding-right 1.2rem
      margin-right 1.2rem
      border-right 1px solid #D9D9D9
      line-height 1.4rem

      &:last-child
        padding-right 0
        margin-right 0
        border none

  // 好评率
  .levels
    .label
      display inline-block
      vertical-align middle
      color gray

    .ui-stars
      margin-top -0.2rem
      width auto

// 课程介绍
.course-info
  padding 1.5rem

  .row
    clearfix()

  .label
    float left
    font-size 1.4rem
    width 7rem
    padding-top 0
    height auto
    line-height 1.5

  .info
    margin-left 7rem

    p
      margin 0
      font-size 1.4rem
      text-align left

// 介绍内容
.tab-cont
  h2
    font-size 1.8rem
    margin 0

  p
    font-size 1.4rem
    margin .5rem 0

  img
    width 100%
    display block

  iframe
    width 100%
    min-height 310px

  .desc
    padding 1.5rem

  // 学生评论
  .rates
    padding 1.5rem
    font-size 1.4rem

    span
      color orange


// 可授课时间表
.schedule-box
  border .2rem solid #D9D9D9
  border-bottom-width .1rem
  margin 1.5rem

  table
    width 100%

  .schedule
    .date
      .day
        height 6rem

        &:last-child
          height 5.9rem

        em
          padding-top 1rem

    .arrange
      table
        th
          height 5rem
          text-align center
          line-height 1.2rem
          vertical-align middle

          &:last-child
            border-right-width 0

          span
            display block
            color gray

        td
          &:last-child
            border-right-width 0

          .placeholder
            width 100%
            height 6rem

          .over
            background-color #FFB980


// 评论列表
.comment-list
  .comment-list-item
    padding 1.5rem
    border-top .1rem solid #E6E6E6

  .thumb
    float left
    width 5.4rem

    .ui-avatar
      size 4.4rem

  .info
    position relative
    margin-left 5.4rem

    p
      font-size 1.2rem
      margin .5rem 0
      overflow-y hidden

    .name
      color green
      font-size 1.4rem

    .date
      absolute right top .3rem
      color gray

    .comment-type
      color gray

      span
        display inline-block
        position relative
        font-size 1.2rem

        i
          vertical-align baseline
          font-size 1.4rem
          margin-right 0.2rem

// 分享
.panel-share
  padding 1.5rem
