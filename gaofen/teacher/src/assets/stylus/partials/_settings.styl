// ==================================================
// 基础配置
// ==================================================

// 灰度色
// ------------------------------
black = #000
gray-darker = #020202
gray-dark = #272727
gray = #808080
gray-light = #999
gray-lighter = #ccc
white = #FFF

// 彩色
// ------------------------------
orange = #FFA200
blue = #489AE0
green = #2CBF00
red = #E04848
red-dark = #D80000
purple = #8169CD

// 链接色
// ------------------------------
// 正常状态
link-color = gray-dark
// 滑过状态
link-color-hover = #4F4644

// 链接高亮
link-highlight-color = #4F4644

// 链接触发背景
link-active-background = #F2F2F2

page-backgroud-color = #F0F0F0

// 排版
// ------------------------------

// 字体集
arial = Arial, Tahoma, "Helvetica Neue", Helvetica, sans-serif
tahoma = Tahoma, "Helvetica Neue", Helvetica, Arial, sans-serif
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
times = "Times New Roman", Times, serif
yahei = "Hiragino Sans GB", "Microsoft Yahei", "SimSun"
heiti = "SimHei"
songti = "SimSun"

// 字体设置
browser-default-font-size = 10px
font-color = gray-dark
default-line-height = 1.5

// 等比例缩放
responsive = false

// 纵轴高度
z-index-header = 10200
z-index-loading = 10100
z-index-nav-main = 10000
z-index-filter-bar = 1100
z-index-mask = 100
z-index-navbar = z-index-mask - 1
z-index-tool-bar = 10
