// 教师可授课时间表
.schedule-teacher
  border .2rem solid #D9D9D9
  border-bottom-width .1rem
  margin 1.5rem
  .schedule
    .date
      width 100%
      height 6rem
      border-right none
      box-sizing border-box
      display flex
      .mon
        width 12.5%
        height 6rem
        float none
        border-right .2rem solid #D9D9D9
        box-sizing border-box
        flex 1

      em
        padding-top 1rem

      //.week
        //flex 7
        //display flex
      .day
        flex 1
        width 12.5%
        float none
        height 6rem
        border-bottom .2rem solid #D9D9D9
        border-right .1rem solid #D9D9D9
        box-sizing border-box
        &:last-child
          height 6rem
          border-right none


    .arrange
      //float left
      width 100%
      padding-top 0
      height 30rem
      overflow-x hidden
      overflow-y auto
      table
        width 100%
        position relative
        tr
          &:last-child
            th
              border-bottom none
        th
          width 12.5%
          height 48px
          border 2px solid #D9D9D9
          border-width 0 2px 2px 0
          box-sizing border-box
          overflow hidden
          span
            display block
            line-height 1
            &:nth-child(2n)
              line-height .5
        td
          width 12.5%
          height 48px
          border none
          box-sizing border-box
          overflow hidden
          .placeholder
            width 100%
            height 8px
            border 1px solid #f8f8f8
            border-width 0 1px 1px 0
            border-right-color #D9D9D9
            box-sizing border-box
            &:last-child
              border-bottom-color #D9D9D9

          &:last-child
            border-right none
          .over
            background #FFB980
            color #8B3E02
            border-color #FFB980