// Core variables and mixins
@import "bootstrap/variables"

$brand-danger = #D9534F

@import "bootstrap/mixins"

@import "nib/positions"

// Reset and dependencies
@import "partials/bootstrap/_normalize"
@import "partials/bootstrap/_scaffolding"
@import "partials/bootstrap/_utilities"

@import "partials/bootstrap/_forms"
@import "partials/bootstrap/_buttons"

// bootstrap下拉
@import "partials/bootstrap/_dropdowns"

@import "partials/_placeholders.styl"
@import "partials/_utilities"

// 组件
.btn-primary
.btn-primary:hover
  background #FFA201
  border-color #FFA201

.input-lg
  font-size 16px
  -webkit-appearance none
  outline none

.input-lg::-webkit-input-placeholder
  color #555

.input-lg::-moz-placeholder
  color #555

.input-lg::input-placeholder
  color #555

select.input-lg
  line-height 1.3333
  padding-left 14px

.select-box
  position relative

  &:before
    absolute right 12px top 21px
    content ""
    triangle #D9D9D9 12px down

html
body
  background #E1F2FF

h1
  font-family $headings-font-family
  font-weight $headings-font-weight
  line-height $headings-line-height
  color $headings-color

.form-header
  .form-name
    margin 0
    background #A2AD57
    color #FFF
    text-align center
    font-size 24px
    padding 15px 0

  .form-description
    padding 20px
    color gray

.fields
  .form-group
    margin-bottom 10px
    clearfix()

    .control-label
      float left
      margin 0
      font-size 16px
      width 72px
      line-height 46px
      text-align right
      font-weight normal

      span
        font-size 14px
        font-weight normal
        display inline-block

    .controls
      margin-left 84px

    .required
      &:after
        content " *"
        color $brand-danger

    .help-block
      margin 0 0 5px

    .error-message
      margin-top 5px
      color $brand-danger

.field
  .choices
    border 1px solid #DDD
    border-radius 4px
    background #FFF

    .radio
    .checkbox
      border-bottom 1px solid #DDD
      margin 0
      padding 15px

      label
        display block
        font-size 16px

      input[type=text]
        margin-top 10px

    .other-choice
      border-bottom none

  select + select
    margin-top 10px

  .captcha
    input
      margin-bottom 10px

    img
      vertical-align middle

    a
      margin-left 10px
      line-height 30px
      vertical-align middle

  .input-number
    display flex

    .minus
    .form-control
    .plus
      vertical-align middle
      box-sizing border-box

    .form-control
      text-align center
      border-radius 0
      margin 0 -1px
      padding 10px 0
      flex 2 0 30px

    .minus
    .plus
      min-width 40px
      appearance none
      background white
      border 1px solid #CCC
      line-height 44px
      flex 0 1 40px
      padding 0
      font-size 18px

    .minus
      border-radius 3px 0 0 3px

    .plus
      border-radius 0 3px 3px 0

.input-group
  background #FFF
  border-radius 4px
  border 1px solid #DDD

.input-group-item
  clearfix()
  padding 10px

  .label
    float left
    line-height 46px
    width 44px
    font-size 16px

  & + .input-group-item
    border-top 1px solid #DDD

// 提交成功提示
.msg-success
  padding 40px 20px
  background #FFF
  border 1px solid #DDD
  border-radius 4px
  background #FFF
  margin 40px 20px


  h3
    margin 0 0 10px
    font-weight normal
    font-size 24px
    color #5CB85C

  p
    margin 0
    padding-top 10px
    border-top 1px dashed #CCC
    color #666
    font-size 16px

// 出错浮层
.alert
  absolute left 50% top 50%
  width 90%
  margin -20px 0 0 -45%
  text-align center
  color #FFF
  border-radius 10px
  font-size 18px
  padding 10% 5%
  background rgba(0, 0, 0, .75)