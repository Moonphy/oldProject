// ==================================================
// 占位符
// ==================================================

// 清除浮动
// 用法：
// clearfix()
// ------------------------------
$clearfix
  if support-for-ie
    *zoom 1
  &:before
  &:after
    display table
    content ""
    line-height 0
  &:after
    clear both

// 小三角核心类
// ------------------------------
$triangle-core
  size 0 0
  font-size 0
  overflow hidden

// 斜纹背景
$striped-background
  background-image linear-gradient(45deg, rgba(255, 255, 255, .15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%, transparent 75%, transparent)

// 表单
$form-view
  background #FFF
  box-shadow 0 0 3px #999
  margin 0 auto 40px
  max-width 700px

  .banner
    @extend $striped-background
    background-size 8px 8px
    background-color #94D5FC
    height 40px
    line-height 40px

    .banner-text
      font-size 16px
      text-indent 30px
      color #FFF

  .entry
    .form-header
      .field
        border-bottom 1px solid #E9E9E9

    .fields
      padding 10px 30px

    .submit-field
      border-top 1px solid #DDD
      margin 30px 0

      .btn
        padding 6px 30px
