
.course-detail-title
  margin-bottom 20px
  border-bottom 1px solid #e6e6e6
  h1
    display inline-block
    margin-bottom 5px
    margin-top 0
    font-size 28px
    font-weight 400
  .ui-label
    margin-bottom 10px
.course-detail-info
  .course-detail-time
  .course-detail-stage
    padding 10px 0
    font-size 16px
  .icon
    vertical-align middle
    margin-right 10px
  .course-price
    width 560px
    //height 60px
    background-color #efefef
    padding 10px 15px
    margin-top 15px
    color grey
    overflow hidden

  .font-price
    color orange
    font-size 40px
    margin 0 10px
  .btn-orange
    width 130px
    line-height 44px
    font-size 16px
    margin-top 7px
    margin-right 3px
    border-radius 4px

.course-detail-teacher
  max-width 398px
  height 213px
  border 1px solid #e6e6e6
  border-radius 4px
  position relative
  .font-blue
    color #48bccb
.detail-teacher-top
  absolute left 19px top 9px
  .icon
  span
    vertical-align middle
// 教师
.teacher-slider
  margin-top 38px
  height 165px
  color grey
  .unslider-wrap
    height 146px
  .unslider-item
    padding 10px 19px
    float left
    box-sizing border-box
    strong.font-md
      color #000000
    .ui-avatar
      size 64px
      border-radius 4px
  .teacher-info
    height 84px
    overflow hidden
  .teacher-num
    padding-top 5px
    text-align center
    i
      font-size 30px
      font-weight 100
      color #e6e6e6
      margin-top 5px
  .teacher-num-left
    margin-left 12px
    padding-right 30px

  .teacher-num-right
    padding-left 30px
  .teacher-num-right
  .teacher-num-left
    div
      font-size 14px

// 右侧导航
.tab-right
  fixed right 50% top 495px
  transform translate(425px,0)
  li
    border-left 1px solid #e6e6e6
    position relative
    min-height 20px
    a
      display block
      padding-left 20px
      font-size 16px
      min-height 40px
      color #939393
      span
      b
        font-weight 600
        relative left top -8px
    .dot
      border none
      background-color #c8c8c8
    &:last-child
      .dot
        top auto
        left -7px
        bottom 0
        border 2px solid #c8c8c8
        background-color #fff
    &.active
      a
        color #48bccb
      .dot
        left -7px
        border 2px solid #56c2d0
        background-color #fff
  .dot
    absolute left -5px top
    size 9px
    border-radius 50%

// 课程介绍
.detail-page
  .tab-container
    max-width 820px
.tab-container-title
  //margin-bottom 20px
  clearfix()
  span
    display inline-block
    font-size 26px
    border-left 10px solid #48bccb
    padding 0 20px 0 10px
    line-height 1
    float left
    background-color #fff
  .borer-b-grey
    height 13px
.course-detail-content
  font-size 16px
  margin-top 30px
  margin-bottom 50px
  clearfix()
  .icon
    vertical-align top
    margin-right 10px
  p
    margin 10px 0

.course-detail-p-title
  font-size 22px
  line-height 1.2
  margin-bottom 15px
  color #48bccb
.course-detail-p
  font-size 16px

.course-detail-schedule-title
  font-size 26px
.course-detail-schedule-list
  ul
    margin 20px 0 0 20px
  li
    position relative
    border-left 1px solid #d3ecf0
    padding-bottom 30px
    .dot
      background-color #fff
      padding 5px
      absolute left -23px top
      span
        display block
        size 32px
        border 1px solid #d3ecf0
        border-radius 50%
        line-height 32px
        text-align center
        color #48bccb
        font-style italic
    &:last-child
      border-left none
  .font-orange
    color #fc992b
    font-weight bold
  .btn
    size 98px 34px
    line-height 34px
    border-radius 4px
    font-size 14px
    absolute right top 6px

// slider
.course-detail-teacher
  .slider-item-len
    absolute right 40px top 10px
    font-size 12px
    color grey
  .unslider-arrow
    absolute right top 15px
    text-indent 999px
    overflow hidden
    left auto
    z-index 0
    @extend .icon-up-grey

    &.prev
      right 75px
      &:hover
        @extend .icon-down
        transform rotate(180deg)

    &.next
      transform rotate(180deg)
      &:hover
        @extend .icon-down
        transform rotate(0deg)


  .unslider-nav
    absolute right 60px top 10px
    ol
      li
        display none
        color grey
        font-size 12px
        &.unslider-active
          display block