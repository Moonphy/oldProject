@import "../_sprite"
@import "../_spriteSet"

.icon
  display inline-block

sprites($spritesheet_sprites)
sprites($spritesheet_sprites_set)


.ui-share
  .icon
  span
    vertical-align middle
  .btn-weibo
  .btn-qq
  .btn-wechat
    display block
    width 50px
    padding 4px 0 6px 0
    margin 5px
    border-radius 4px
    text-align center
    &:active
      box-shadow inset 0 .2rem .3rem rgba(0, 0, 0, .3)
      
.icon-404
  size 200px 251px
  background url("../img/404.png") no-repeat center 0

.icon-live-time
  size 280px 180px
  background url("../img/live-time.png") no-repeat 0 0
  background-size 100%
.icon-live-done
  size 280px 172px
  background url("../img/live-done.png") no-repeat 0 0
  background-size 100%
