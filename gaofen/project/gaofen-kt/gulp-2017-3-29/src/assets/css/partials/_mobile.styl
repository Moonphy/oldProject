@media only screen and (max-width: 800px)
  // 直播页
  .live-top
    height 35px

    .label-blue
      absolute right 5px top
      margin-top 5px
    .title-kt
      transform scale(.5) translate(-30%,-50%)
      margin-left 0!important
    .live-title
      line-height 35px
      padding-left 90px
      font-size 18px
      width 80%
  .live-message-top
  .live-top-right
    display none

  .live-container
    padding-top 35px

  .live-content
    width 100%
    padding-bottom 247px
    box-sizing border-box
  .live-courses
    bottom 247px
    height auto
    .live-courses-title
      font-size 24px
      height 68px
      overflow hidden
  .live-message-wrap
    width 100%
    height 247px
    top auto
    bottom 0
  .live-courses-tips
    transform scale(.8)
    .erweima-content
      margin-top 10px
  .live-message-list
    top 0
    bottom 80px
    .message-list
      width 100%
      .message-item
        padding-right 0

  .stars-wrap
    transform scale(.6)

  // 通用
  .gf-footer
    padding 0 15px
  .gf-header
    padding 0 15px
    ul
      display none
  .container
    overflow hidden
  .setting-wrap
    padding 15px
    margin 15px

  // detail页
  .detail-page
    *
      box-sizing border-box
    .course-price
      width 100%
    .icon-detail-target
    .icon-detail-point
      transform scale(.7)
    .ml120
      margin-left 100px!important
  .course-detail-info
  .course-detail-teacher
    float none
  .course-detail-teacher
    margin-top 20px
    .teacher-num-left
      padding-right 5px
      margin-left 0
    .teacher-num-right
      padding-left 5px
    .teacher-num
      span
        font-size 18px
  .course-detail-schedule-list
    .ml40.mr100
      margin-right 0!important
    .btn
      position relative
      left 40px