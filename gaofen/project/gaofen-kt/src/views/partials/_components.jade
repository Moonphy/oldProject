mixin avatar(width,height)
    - var w = width || 48
    - var h = height || 48
    .ui-avatar
        +dummy("avatar_" + w + "x" + h + ".png")

//-----------------------------------------------------------
//- 元件: 选项卡
//-----------------------------------------------------------
mixin tab(tab_items)
    .ui-tab
        each item in tab_items
            if item.active
                .tab.active
                    span= item.label
                    if item.hot
                        span= '(' + item.hot + ')'
            else
                .tab
                    span= item.label
                    if item.new
                        sup.dot
                    if item.hot
                        span= '(' + item.hot + ')'


