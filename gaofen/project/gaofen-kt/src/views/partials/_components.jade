mixin courses-block(idx)
    a.courses-block(href='live.html',title='#{article.title}')
        img(src='#{current.base}img/block/course-bg-' + idx + '.jpg')
        .courses-top
            .courses-top-course
                if idx == 3
                    i.icon.icon-physics
                    span 初一物理
                    span.btn.fr.font-green 系列课
                else
                    i.icon.icon-math
                    span 中考数学
            .courses-title.mt30= article.title
            .courses-teacher
                .show-inline 陆小生老师
        .courses-bottom
            .courses-detail
                .courses-detail-price.tr.pr20
                    span.font-orange &yen;250
                .courses-detail-num.pl20
                    strong 849人
                    br
                    span 已报名
                .courses-detail-state.mt15
                    if idx == 3
                        .courses-detail-time.bg-orange
                            i.icon.icon-live.ml10
                            span.ml5 课程直播中，点击上课
                    else
                        .courses-detail-time.bg-grey
                            i.icon.icon-time.ml10
                            span.ml5 每周一三五
                            span.ml5 19:00~20：00

            .courses-des= article.summary

