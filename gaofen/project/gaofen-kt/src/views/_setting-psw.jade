block content
    .container
        // 个人设置
        .setting-wrap.mt30
            .ui-tab
                ul.clearfix
                    li: a.tab(href='setting-msg.html',title='') 个人信息
                    li: a.tab.active(href='setting-psw.html',title='') 修改密码
                    li: a.tab(href='setting-phone.html',title='') 绑定手机
                    li: a.tab(href='setting-wechat.html',title='') 绑定微信

            .setting-container.tc
                form.gf-form
                    .gf-form-row.tr
                        label 旧密码：
                        input(type='text')
                    .gf-form-row.tr
                        label 新密码：
                        input(type='text')
                    .gf-form-row.tr
                        label 重复密码：
                        input(type='text')

                    input.btn.btn-submit.mt80(type='button', value='保存')

        +loader-box('fixed')

