// 元件：按钮
// ------------------------------

.btn
  display inline-block;
  border 1px solid transparent
  outline none
  text-align center
  white-space nowrap
  vertical-align middle
  touch-action manipulation

  &.disabled
    background #D9D9D9
    color gray-light

  &:active
    box-shadow inset 0 2px 3px rgba(0, 0, 0, .3)

  /*&:visited
    color #ffffff*/

.btn-sm
  width 60px!important
  height 30px
  line-height 30px
  font-size 14px

.btn-block
  display block
  width 100%

.btn-blue
  width 498px
  background #67c4d4
  color #ffffff
  &:visited
    color #ffffff
  &:hover
    text-decoration underline
.btn-blue-reverse
  padding 5px 10px
  border-radius 4px
  background-color #ffffff
  color #67c4d4
  border 1px solid #67c4d4
  font-size 13px
  &:visited
    color #67c4d4
.btn-submit
  size 260px 40px
  color #ffffff
  background-color #10e2bb
  border-radius 4px
  font-size 16px
.btn-wechat
  background #12bb12
  &:hover
    background darken(@background, 16%)
.btn-weibo
  background #cd1919
  &:hover
    background darken(@background, 16%)
.btn-qq
  background #1983cd
  &:hover
    background darken(@background, 16%)
.btn-orange
  background #fc992b
  color #ffffff
  &:hover
    background darken(@background, 16%)