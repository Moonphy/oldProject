// 元件：按钮
// ------------------------------

.btn
  display inline-block;
  border 1px solid transparent
  outline none
  text-align center
  white-space nowrap
  vertical-align middle
  touch-action manipulation

  &.disabled
    background #D9D9D9
    color #b6b6b6

  &:active
    box-shadow inset 0 2px 3px rgba(0, 0, 0, .3)

  /*&:visited
    color #ffffff*/

.btn-sm
  width 60px!important
  height 30px
  line-height 30px
  font-size 14px



.btn-blue
  width 498px
  background #67c4d4
  color #ffffff
  &:visited
    color #ffffff
  &:hover
    text-decoration underline

.btn-blue-reverse
  padding 5px 10px
  border-radius 4px
  background-color #ffffff
  color #67c4d4
  border 1px solid #67c4d4
  font-size 13px
  &:visited
    color #67c4d4

.btn-submit
  size 260px 40px
  color #ffffff
  background-color #10e2bb
  border-radius 4px
  font-size 16px
  line-height 40px

.btn-block
  display block
  width 100%


.btn-orange
  background #fc992b
  color #ffffff
  &:visited
    color @color

.btn-orange-reverse
  color #fc992b
  background-color #fff
  border 1px solid #fc992b
  &:visited
    color @color

.btn-purple-reverse
  color #5b95dd
  background-color #fff
  border 1px solid #5b95dd
  &:visited
    color @color