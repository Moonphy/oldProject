.ui-dialog
  fixed left top
  size 100%
  background rgba(0, 0, 0, 0.4)
  z-index 11
  display none
.dialog-wrap
  fixed left 50% top 40%
  size 450px auto
  box-sizing border-box
  background-color #f9f9f9
  border-radius 4px
  transform translate(-50%,-50%)
  box-shadow 0 20px 20px rgba(0,0,0,.3)
  z-index 12

.dialog-header
  font-size 16px
  color #333333
  padding 10px
  border-bottom 1px solid #e5e5e5

.dialog-content
  font-size 14px
  padding 15px
  input[type="text"]
    width 100%
    padding 10px
    border 1px solid #ccc
    box-sizing border-box
    color #333333
    border-radius 4px

.dialog-footer
  padding-top 10px
  text-align right
  .btn
    margin-left 10px
