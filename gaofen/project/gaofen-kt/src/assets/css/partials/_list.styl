.filter-wrap
  font-size 14px
.ui-dropdown
  width 138px
  display inline-block
  position relative
  line-height 42px
  margin-right 10px
  border-radius 4px
  border 1px solid #e6e6e6
  background-color #ffffff
  .dropdown-text
    padding 0 20px
  .icon
    absolute right 20px top 18px
    z-index 10
  .dropdown-list
    width 140px
    background-color #48bccb
    border-radius 4px
    overflow hidden
    absolute left -1px top -1px
    z-index 9
    display none
    li
      padding 0 20px
      &:hover
        background-color #34a4b2
        a
          color #aaeaf2
    a
      display block
      color #ffffff
      border-bottom 1px solid #ffffff
      margin-bottom -1px


  &:hover
    .dropdown-list
      display block
    .icon-down-black
      @extend .icon-down