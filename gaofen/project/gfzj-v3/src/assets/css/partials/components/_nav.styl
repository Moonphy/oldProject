// 底部导航条样式
// =====================
.nav-menu
  width: 100%;
  display flex
  height: nav-height;
  background-color: nav-bg-color;
  border-top .01rem solid #dddddd
  position: fixed;
  left 0
  bottom: 0;
  z-index: 999;
  overflow hidden
  a
    display block
    flex: 1;
    color: nav-a-color;
    text-align: center;
    font-style:normal;
    -webkit-text-stroke-width: 0px!important;
    p
      font-size: .12rem;
      line-height: 1;
      -webkit-font-smoothing: antialiased;
      -webkit-text-stroke-width: 0.2px;
      -moz-osx-font-smoothing: grayscale;
      margin 0
    .icon
      width .2rem
      height .21rem
      background-size 100%
      margin-top .05rem
    span
      vertical-align middle
      font-size: .14rem;
      line-height: .16rem;


//图标
.icon-nav-search
  background url("../img/icon-nav-search.png") no-repeat center 0
.icon-nav-question
  background url("../img/icon-nav-question.png") no-repeat center 0
.icon-nav-home
  background url("../img/icon-nav-home.png") no-repeat center 0



//current状态
for type in index
  .{type}-page
    .nav-search
      .icon-nav-search
        background url("../img/icon-nav-search-active.png") no-repeat center 0
        background-size 100%
      p
        color nav-aCurrent-color

for type in album expert
  .{type}-page
    .nav-question
      .icon-nav-question
        background url("../img/icon-nav-question-active.png") no-repeat center 0
        background-size 100%
      p
        color nav-aCurrent-color

for type in home form
  .{type}-page
    .nav-home
      .icon-nav-home
        background url("../img/icon-nav-home-active.png") no-repeat center 0
        background-size 100%
      p
        color nav-aCurrent-color