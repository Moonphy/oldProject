.btn-start
  width 1rem
  height 1rem
  border-radius 100%
  border .04rem solid #dddddd
  background url("../img/icon-record.png") no-repeat center .2rem #f7f7f7
  background-size 25%
  position relative
  p
    width 100%
    font-size .13rem
    absolute left bottom

