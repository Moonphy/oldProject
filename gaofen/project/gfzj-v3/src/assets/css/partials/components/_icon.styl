  width .5rem
  height .5rem
  border-radius 100%
  border .02rem solid #dddddd

.btn-reset
  background url("../img/icon-reset.png") no-repeat center center #f7f7f7
  background-size 45%

.btn-upload
  background url("../img/icon-upload.png") no-repeat center center #f7f7f7
