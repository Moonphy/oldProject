body
  width 100%
  height 100%

.list-top
  margin 0 auto
  padding .2rem .2rem .05rem .2rem
  position relative
  img
    width 100%

.ui-list
  margin-left .2rem
.list-item
  display block
  border-bottom .01rem solid #e5e5e5
  color #707070
  position relative
  padding-top .07rem
  p
    margin: .04rem .35rem .1rem 0;
    font-size: .14rem;

  .icon-right
    position absolute
    right .15rem
    bottom .12rem
  .icon
    width .2rem
    height .2rem
    vertical-align top

.text-overflow
  width 90%
  white-space: nowrap;
  overflow: hidden;
  word-wrap: normal;
  text-overflow: ellipsis;

.btn-skip
  background: #ffbf68;
  color: #ffffff;
  border-radius: .02rem;
  padding: .05rem;
  position: absolute;
  right: .3rem;
  top: 46%;
  margin-top: -.12rem;
  font-size: .12rem;
