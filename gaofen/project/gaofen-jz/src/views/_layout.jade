- var suffix = environment == "production" ? ".min" : "";

//- 全站公用元件
//------------------------------
include partials/_components


doctype html
html(class="#{root_class ? root_class:''}")
    head
        meta(charset="UTF-8")
        title= site_name + page_title
        meta(name="renderer", content="webkit")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="keyword", content="")
        meta(name="description", content="")
        link(rel="stylesheet", type="text/css", href="#{current.base}css/base#{suffix}.css")

body
    .wrap(class=body_class ? body_class : false, id=body_id ? body_id : false)

        include partials/_header

        block content

        include partials/_footer

    script(src='#{current.base}js/jquery.1.8.2.js')
    script(src='#{current.base}js/common.js')
    script(src='#{current.base}js/gfjz.js')
    if current.source !== "treasury"
        script(src='#{current.base}js/swipePC.js')
    block javascript