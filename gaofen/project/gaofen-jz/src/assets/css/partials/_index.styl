// 简介：首页样式
//==============================

.index-ad
  margin 40px -20px 40px 0
  a
    display block
    size 260px 100px
    float left
    margin-right 20px
    margin-bottom 20px

// 热门问题栏样式
.index-question
  .question-left
    width 764px
    font-size 18px
    li
      border-bottom 1px solid #e6e6e6
      padding 11px 0
      .icon
        vertical-align middle
    .icon-question
      margin-top 4px
    p
      color #333333
      margin 0 50px 0 30px
      text-overflow (width = 670px)
      &:hover
        color #67c4d4
  .question-right
    size 315px 249px
    border 1px solid #e6e6e6
    .slide-wrap
      size 275px 229px
      margin-top 20px
      margin-left 20px
      position relative
    .slide-container
      size 275px 193px
      border-radius 3px
      overflow hidden
      li
        position relative
        height 193px
      p
        width 100%
        background-color #cdcdcd
        color #333333
        margin 0
        absolute left bottom
        font-size 14px
        padding 5px
        text-overflow (width = 270px)
    .index-btn
      width 100%
      absolute left bottom
      z-index 2
      text-align center
      span
        display inline-block
        size 10px
        border-radius 50%
        border 2px solid #e6e6e6
        margin 6px
        cursor pointer
        &.active
          size 6px
          border 4px solid #67c4d4

