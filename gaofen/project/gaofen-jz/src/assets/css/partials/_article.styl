// 文章页样式
// =======================
.ui-article
  overflow hidden
.article-title
  border-bottom 1px solid #e6e6e6
  h2
    font-size 24px
    font-weight 400
    margin-top 15px
    margin-bottom 0
    color #666666
  i
    vertical-align middle
    margin-right 5px


.article-content
  font-size 14px
  color #333333
  letter-spacing 1px
  p
    text-align left
    margin 0
    line-height 2
  img
    margin 20px auto

.comment-header
  border-top 1px solid #e6e6e6
  margin-top 80px

  .comment-header-title
    display inline-block
    border-top 4px solid #67c4d4
    color #445568
    font-size 20px
    padding-top 5px
    margin-top -1px

  .fr
    font-size 14px
    a
      color #999999

.comment-form
  textarea
    size 798px 138px
    padding 10px
    resize none
    border 1px solid #e6e6e6
    border-radius 4px
    font-size 14px
    color #666666

