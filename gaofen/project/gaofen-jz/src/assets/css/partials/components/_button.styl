// 元件：按钮
// ------------------------------

.btn
  display: inline-block;
  size 298px 48px
  border: 1px solid transparent
  border-radius 4px
  outline none
  font-size 18px
  line-height 48px
  text-align center
  white-space: nowrap
  vertical-align: middle
  touch-action manipulation

  &.disabled
    background #D9D9D9
    color gray-light

  &:active
    box-shadow inset 0 2px 3px rgba(0, 0, 0, .3)

  /*&:visited
    color #ffffff*/

.btn-sm
  width 60px!important
  height 30px
  line-height 30px
  font-size 14px
.btn-block
  display block
  width 100%

.btn-blue
  width 498px
  background #67c4d4
  color #ffffff
  &:visited
    color #ffffff
  &:hover
    text-decoration underline
.btn-blue-reverse
  background-color #ffffff
  color #67c4d4
  border 1px solid #67c4d4
  &:visited
    color #67c4d4

.btn-wechat
  background #12bb12
  &:hover
    background darken(@background, 16%)
.btn-weibo
  background #cd1919
  &:hover
    background darken(@background, 16%)
.btn-qq
  background #1983cd
  &:hover
    background darken(@background, 16%)
.btn-orange
  background #f59362
  &:hover
    background darken(@background, 16%)