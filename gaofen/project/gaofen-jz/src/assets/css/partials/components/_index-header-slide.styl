// 轮滑通用
.slide-wrap
  overflow hidden
  .slide-container
    position relative
    height 100%
    z-index 0
  ul
    absolute left top
    li
      float left
      position relative
      a
        display block
      img
        width 100%


// 顶部轮滑
.header-slide
  width 100%
  height 140px
  absolute left top 106px
  z-index 2
  background-color rgba(255,255,255,.9)
  padding-top 10px
  display none

.top-slide
  size 1160px 150px
  margin 0 auto
  position relative
  z-index 1
  .slide-wrap
    size 1100px 150px
    margin 0 auto
  .slide-container
    width 1020px
    z-index 2
    li
      font-size 0
      //padding-right 10px
      .img-wrap
        size 160px 96px
        overflow hidden
      p
        text-align center
        font-size 16px
        margin-top 8px
        color #445568

  .btn-left
  .btn-right
    size 20px 40px
    background-color #000000
    border-radius 4px
    opacity .2
    position absolute
    top 46px
    text-align center
    line-height 45px
    &:hover
      opacity .5

  .btn-left
    left 0
  .btn-right
    right 0


// banner轮滑
.center-slide
  size 640px 384px
  position relative

  .slide-wrap
    size 100%
    li
      height 384px
      overflow hidden
    p
      width 100%
      background-color rgba(0,0,0,.6)
      color #ffffff
      margin 0
      absolute left bottom
      font-size 18px
      padding 5px 180px 5px 10px
      text-overflow (width = 450px)
      z-index 1
  .index-btn
    absolute right 10px bottom 2px
    z-index 2
    span
      display inline-block
      size 10px
      border-radius 50%
      border 2px solid #ffffff
      margin 5px
      cursor pointer
      &.active
        size 6px
        border 4px solid #67c4d4