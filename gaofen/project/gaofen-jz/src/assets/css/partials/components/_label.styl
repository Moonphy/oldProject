// label
// =================
.ui-label
  font-style normal
  color #ffffff
  padding 3px 8px
  vertical-align middle
  border-radius 2px
  margin-left 10px
  white-space nowrap
  display inline-block
  span
    display inline-block
    margin-left 10px
    padding-left 8px
    border-left 1px solid rgba(255,255,255,.4)
    line-height 1.2

.label-orange
  background-color #f59362
.label-red
  background-color #cb6363
.label-blue
  background-color #67c4d4

.article-label
  display inline-block
  padding 2px 10px
  font-size 14px
  color #67c4d4
  border-radius 20px
  border 1px solid #e6e6e6
  margin-right 5px
  .icon-close-sm
    margin-left 5px
    vertical-align middle
    display none
  &:visited
    color #67c4d4
  &:hover
    background-color #e6e6e6
    .icon-close-sm
      display inline-block
    //text-decoration underline

.article-title
  .fr
    .ui-label
      &:visited
        color #ffffff
      &:hover
        text-decoration underline
// tab选项卡
// =================
.ui-tab
  display flex
  border-bottom .01rem solid #dddddd
  .tab
    flex 1
    text-align center
    padding-top .1rem
    span
      display inline-block
      font-size .16rem
      margin-bottom -.01rem
    &.active
      span
        color #fd8f7b
        border-bottom .02rem solid #fd8f7b

    .dot
      display inline-block
      size .05rem
      background-color #ff704c
      vertical-align super
      border-radius 100%