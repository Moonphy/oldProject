.header
  width 100%
  border-bottom 1px solid #e5e5e5

  .header-container
  .header-bar
    width 1100px
    margin 0 auto

  .header-container
    height 105px
    font-size 16px

    .logo
      float left
      margin-top 40px
    ul
    .form
      float left
      margin-top 48px
    li
      float left
      line-height 36px
      margin 0 10px
      a
        display block
        padding 0 7px
        color #999999
      span
      .icon
        margin 0 2px
        vertical-align middle

      &:hover
        span
          color #67c4d4

        for item in index treasury special wenda
          .icon-{item}
            @extend .icon-{item}-active
  .form
    margin-left 30px
    input[type="text"]
      width 278px
      height 16px
      line-height 16px
      padding 10px
      font-size 14px
      border 1px solid #e6e6e6
      border-right none
      border-radius 4px 0 0 4px
      &:focus
        box-shadow none
    .btn-search
      float right
      display block
      size 40px 38px
      background-color #67c4d4
      border-radius 0 4px 4px 0
      text-align center
      line-height 44px
      border none
      position relative
      overflow hidden

  .reg-login
    width 124px
    line-height 38px
    margin-top 48px
    position relative
    a
      display inline-block
      size 60px 38px
      text-align center
      border-radius 4px
      color #999999
    .btn-reg
      background-color #67c4d4
      color #ffffff
    .ui-avatar
      size 38px

    .user-home-list
      absolute left top 30px
      display none
      z-index 9
      .bg-user-top
        absolute left 15px top 16px
        z-index 1
      ul.user-list
        margin-top 21px
        border 1px solid #67c4d4
        border-radius 4px
        margin-bottom -2px
        padding 3px 0
        background-color #ffffff
        overflow hidden
      li
        width 100px
        font-size 14px
        line-height 30px
        height 30px
        border-bottom 1px solid #e6e6e6
        &:last-child
          border-bottom-color #ffffff
        a
          width 100%
          height 100%
          padding 0
          text-align left
          &:hover
            color #67c4d4
    &:hover
      .user-home-list
        display block

.header-user
  display inline-block
  text-overflow(width = 76px)
  margin-left 10px
  cursor pointer
.treasury-page
  .header
    background-color #445568

.header-bar
  font-size 14px
  color #ffffff
  line-height 40px
  font-weight 300
  li
    float left
  i
    margin 20px
    color #6d7c8e
  a
    color #ffffff
  .ui-avatar
    size 24px
    vertical-align middle

.btn-search
  position relative
  overflow hidden
  input
    size 100%
    absolute left top
    z-index 1
    opacity .1




for item in index treasury special
  .{item}-page
    .link-{item}
      color #67c4d4!important
    .icon-{item}
      @extend .icon-{item}-active