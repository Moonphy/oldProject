// 皮肤主题基本样式设置
// ==================================================


// body皮肤主题
// ----------------------------
body-bg-color = #ffffff;
body-color = #999999;
body-img-url = url("");
body-padding-top = 0%;


// 全局通用border颜色
// ------------------------------
common-border-color = #aed977


// input的placeholder颜色
placeholder-color = #cccccc;

// ==================================================
// 基础配置
// ==================================================

// 链接色
// ------------------------------
// 正常状态
link-color = gray-dark
// 滑过状态
link-color-hover = #4F4644

// 链接高亮
link-highlight-color = #4F4644

// 链接触发背景
link-active-background = #F2F2F2

page-backgroud-color = #F0F0F0

// 排版
// ------------------------------

// 字体集
zy-font-family = "微软雅黑","Microsoft yahei","Microsoft Yahei",Arial,"Hiragino Sans GB","冬青黑体简体中文 w3","Hiragino Sans GB","冬青黑体简体中文 w3",STXihei,"华文细黑",SimSun,"宋体",Heiti,"黑体",sans-serif

yahei = "Hiragino Sans GB", "Microsoft Yahei", "SimSun"


// 字体设置
browser-default-font-size = 10px
font-color = gray-dark
default-line-height = 1.5

// 等比例缩放
responsive = false

// 纵轴高度
z-index-header = 10200
z-index-loading = 10100
z-index-nav-main = 10000
z-index-filter-bar = 1100
z-index-mask = 100
z-index-navbar = z-index-mask - 1
z-index-tool-bar = 10