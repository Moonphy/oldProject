// 榜单页样式
// =====================

.list-container
  margin-right -20px
  .items
    float left
    width 540px
    margin 20px 20px 28px 0
    dt
      font-size 22px
      line-height 2
      border-bottom 2px solid #e6e6e6
    dd
      padding 10px 0
      border-bottom 1px solid #e6e6e6
      p
        margin 0
        font-size 14px
      .item-title
        font-size 16px
        color #333333
        &:hover
          @extend .font-blue

    dd:nth-child(2)
      padding 20px 0
      .item-title
        font-size 18px

  .item-index
    size 30px
    color #ffffff
    background-color #cccccc
    text-align center
    line-height 30px
    font-size 18px
    border-radius 4px
  dd
    &:nth-child(2)
    &:nth-child(3)
    &:nth-child(4)
      .item-index
        background-color #f59362
  .item-container
    margin-left 50px

  .img-wrap
    display block
    size 260px 156px
    margin 5px 0
    border-radius 4px
    overflow hidden
    img
      width 100%